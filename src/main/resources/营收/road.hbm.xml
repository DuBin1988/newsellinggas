<?xml version="1.0"  encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="test">
	<!--街道管理-->
	<class entity-name="t_road" table="t_road">
	   <id name="ID" type="string">
			<generator class="uuid.hex"></generator>
		</id>
		<!-- 街道名称 -->
	 	<property name="f_road" type="string"/>
		<!-- 街道范围 -->
	 	<property name="f_roadrange" type="string"/>
	 	<!-- 操作日期 -->
	 	<property name="f_date" type="date"/>
		<!--操作员 -->
		<property name="f_operator" type="string"/>
		
		<!--一级总公司-->
		<property name="FirstStair" type="string"/>
		<!--二级总公司-->
		<property name="SecondStair" type="string"/>
		<!--三级总公司-->
		<property name="ThirdStair" type="string"/>
		<!--四级总公司-->
		<property name="FourthStair" type="string"/>
		<!--组织代码-->
		<property name="f_OrgStr" type="string"/>
	</class>
</hibernate-mapping>