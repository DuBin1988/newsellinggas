<navigation:Page
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
	xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit" 
	xmlns:a="clr-namespace:Com.Aote.Attachs;assembly=s2DLL"
    xmlns:o="clr-namespace:Com.Aote.ObjectTools;assembly=s2DLL"
    xmlns:b="clr-namespace:Com.Aote.Behaviors;assembly=s2DLL"
    xmlns:m="clr-namespace:Com.Aote.Marks;assembly=s2DLL"
    xmlns:t="clr-namespace:Com.Aote.Triggers;assembly=s2DLL"
    xmlns:bind="clr-namespace:Com.Aote.Bindings;assembly=s2DLL"
    xmlns:conf="clr-namespace:Com.Aote.Configs;assembly=s2DLL"
	xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation"
	x:Class="Com.Aote.Pages.LoginHJ" 
	FontFamily="Microsoft YaHei" FontSize="18.667" HorizontalAlignment="Center" VerticalAlignment="Center">
    <StackPanel x:Name="LayoutRoot"  Width="1280" Height="800" >
        <StackPanel.Background>
            <ImageBrush ImageSource="./image/loginbg.png"/>
        </StackPanel.Background>
        <StackPanel>
            <TextBlock Visibility="{m:Exp Str='LoginUser.State==$LoadError$:$Visible$,$Collapsed$'}">用户名密码错误，请重新输入
            </TextBlock>
            <toolkit:BusyIndicator BusyContent="正在进行用户名/口令验证，请稍等" IsBusy="{m:Exp Str=LoginUser.IsBusy}">
                <StackPanel>
                    <Grid   DataContext="{m:Res Key=LoginUser}" 
		a:ControlAttach.Focus="{m:Exp Str='!LoginUser.IsModified:$name$,null'}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.933*"/>
                            <RowDefinition Height="41"/>
                        </Grid.RowDefinitions>
                        <Border BorderThickness="0" Margin="0" Grid.Row="1">
                            <Border.Background>
                                <ImageBrush Stretch="Fill" ImageSource="image/loginbottombg.png"/>
                            </Border.Background>
                            <sdk:Label HorizontalAlignment="Center" Margin="0" Content="技术支持：积成电子股份有限公司" VerticalAlignment="Center" FontSize="13.333" Foreground="White"/>
                        </Border>
                        <Border BorderThickness="1" HorizontalAlignment="Center" Height="663" Margin="0,0,100,0" VerticalAlignment="Top" Width="731">
                            <Grid HorizontalAlignment="Right" VerticalAlignment="Center" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.253*"/>
                                    <ColumnDefinition Width="0.747*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="120"/>
                                    <RowDefinition Height="46"/>
                                    <RowDefinition Height="55"/>
                                    <RowDefinition Height="60"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <!-- <Image Source="./image/loginbg.png" Grid.RowSpan="5" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center"/> -->
                                <sdk:Label HorizontalAlignment="Right" Margin="0" Grid.Row="1" VerticalAlignment="Center" Content="帐号：" FontSize="13.333" Foreground="#000000"/>
                                <sdk:Label HorizontalAlignment="Right" Margin="0,8,0,0" Grid.Row="2" VerticalAlignment="Center" Content="密码：" FontSize="13.333" Foreground="#000000"/>
                                <TextBox x:Name="name" Text="{m:Bind Path=ename}" a:ControlAttach.UpdateOnEnter="Text" 
			a:ControlAttach.DefaultButton="okbutton" a:ControlAttach.FocusToOnEnter="password" Grid.Column="1" HorizontalAlignment="Left" Margin="0" Grid.Row="1" TextWrapping="Wrap"  Width="180" VerticalAlignment="Center" Height="30" FontSize="14.667" />
                                <PasswordBox x:Name="password" Password="{m:Bind Path=password}" a:ControlAttach.UpdateOnEnter="Password" 
			a:ControlAttach.DefaultButton="okbutton" a:ControlAttach.FocusToOnEnter="password" Grid.Column="1" HorizontalAlignment="Left" Margin="0" Grid.Row="2"  Width="180" FontSize="14.667" VerticalAlignment="Center"  Height="30"/>
                                <Button Name="okbutton" IsEnabled="{m:Exp Str='!LoginUser.HasErrors'}" Click="{m:Exp Str='LoginUser.Load()'}" Content="登  录" Grid.Column="1" HorizontalAlignment="Left" Margin="0,10,0,0" Grid.Row="3"  Width="124" Cursor="Hand" />

                            </Grid>
                        </Border>
                    </Grid>
                </StackPanel>
            </toolkit:BusyIndicator>
        </StackPanel>
    </StackPanel>

</navigation:Page>