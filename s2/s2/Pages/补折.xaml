    							<o:PropertySetter PropertyName="f_ccreason" NotNull="True"/>
    						</a:Data.Prop>
    					</TextBox>
    					<TextBlock Margin="0,6" Grid.Row="7" TextWrapping="Wrap" Text="公 司 名：" TextAlignment="Right"/>
