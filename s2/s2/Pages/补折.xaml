    							<a:Data.Prop>
    								<o:PropertySetter PropertyName="f_buzhedate" NotNull="True" 
    									Default="{m:Exp Str=SysTime.Today}"/>
    							</a:Data.Prop>
    						</sdk:DatePicker>
    					</Grid>
    					 
    			</toolkit:DockPanel>
    		</Grid>
    	</c:BusyIndicatorEx>
