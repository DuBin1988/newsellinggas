											<a:Data.Prop>
            									<o:PropertySetter PropertyName="f_username"  />
            								</a:Data.Prop>
            							</TextBox>
										<TextBox Text="{m:Bind Path=f_phone}" IsReadOnly="True" Margin="0,3,0,0" TextWrapping="Wrap" Height="25" Grid.Column="3" Width="Auto" HorizontalAlignment="Stretch" RenderTransformOrigin="-0.204,0.68" Grid.Row="6">
											<a:Data.Prop>
            									<o:PropertySetter PropertyName="f_phone"  />
            								</a:Data.Prop>
            							</TextBox>
										<TextBox Text="{m:Bind Path=f_username}"  Margin="0,3,0,2" Grid.Row="1" TextWrapping="Wrap" Height="25" Grid.Column="1" Width="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
											<a:Data.Prop>
            									<o:PropertySetter PropertyName="f_username"  />
            								</a:Data.Prop>
            							</TextBox>
										<TextBox Text="{m:Bind Path=f_address}"  Margin="0" Grid.Row="1" TextWrapping="Wrap" Height="25" Grid.Column="3" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" Width="Auto">
											<a:Data.Prop>
            									<o:PropertySetter PropertyName="f_address"  />
            								</a:Data.Prop>
            							</TextBox>
										<TextBox Text="{m:Bind Path=f_cusDom}"  Margin="0,3,0,0" Grid.Row="2" TextWrapping="Wrap" Height="25" Grid.Column="3" Width="Auto">
											<a:Data.Prop>
