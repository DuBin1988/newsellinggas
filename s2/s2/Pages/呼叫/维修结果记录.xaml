											<a:Data.Prop>
												<o:PropertySetter PropertyName="f_repairreason"  />
											</a:Data.Prop>
										</TextBox>
										<TextBlock Margin="0" TextWrapping="Wrap" Text="报修编号：" HorizontalAlignment="Right" Height="25" VerticalAlignment="Center"/>
