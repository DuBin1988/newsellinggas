								<o:PropertySetter PropertyName="f_watchnum" Value="{m:Exp Str=user.f_watchnum}" NotNull="True"/>
							</a:Data.Prop>
						</TextBox>
						<TextBlock Margin="0" Grid.Row="10" TextWrapping="Wrap" Text="卡　　号：" Height="25" TextAlignment="Right"/>
