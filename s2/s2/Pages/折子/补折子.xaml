    								<o:PropertySetter PropertyName="f_gasmetermanufacturers" Value="{m:Exp Str=users.f_gasmetermanufacturers}"/>
    							</a:Data.Prop>
    						</TextBox>
    						<TextBlock Margin="0,6" TextWrapping="Wrap" Text="卡       号：" TextAlignment="Right" Grid.Row="2"/>
