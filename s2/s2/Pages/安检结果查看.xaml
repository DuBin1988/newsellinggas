                        <Grid Background="LightSteelBlue" Height="700">
                            <Image x:Name="image" Source="{m:Exp Str=data.USER_SIGN\=\=null:$$\,$\{dbclient.BaseAddress\}/file/\{data.USER_SIGN\}$}" Width="600" Height="600"/>
                        </Grid>
                    </sdk:TabItem>
                    <sdk:TabItem Header="售气记录">
                        <toolkit:DockPanel Width="Auto"   >
                            <toolkit:DockPanel   Background="#94a8cd" toolkit:DockPanel.Dock="Bottom" Margin="0,0,0,5" Height="25" >
                                <Grid>
                                    <sdk:DataPager x:Name="pagerPurchase" Source="{Binding ItemsSource.Count, Converter={StaticResource DataPagerConverter}, ElementName=lspurchaselist}"   PageSize="18"  />
                                    <TextBlock TextWrapping="NoWrap" Text="{m:Exp Str=$共 \{lspurchaselist.ItemsSource.Count\} 项}" Width="100"  Margin="10,0,0,3" HorizontalAlignment="Left" />
                                    <TextBlock TextWrapping="NoWrap" Text="{m:Exp Str=userfile.DataContext.f_kahao!\=null:$金额小计 \{lspurchaselist.ItemsSource.f_preamount.MathRound(2)\} 元$\,$0元$}" Width="200" Margin="100,0,0,3" HorizontalAlignment="Left" />
                                    <TextBlock TextWrapping="NoWrap" Text="{m:Exp Str=userfile.DataContext.f_kahao!\=null:$气量小计 \{lspurchaselist.ItemsSource.f_pregas\} 方$\,$0方$}" Width="200" Margin="300,0,0,3" HorizontalAlignment="Left" />
                                </Grid>
                            </toolkit:DockPanel>
                            <sdk:DataGrid  Width="Auto"  Height="Auto" Background="{x:Null}" IsReadOnly="True" AutoGenerateColumns="False" x:Name="lspurchaselist"  Margin="0,0,0,2" >
                                <a:Data.Items>
                                    <o:PagedObjectList x:Name="sellgas"   WebClientInfo="{StaticResource dbclient}" LoadOnPathChanged="False"
									MultiPath="{m:Exp Str=userfile.DataContext.f_userid!\=null:$from t_sellinggas where f_userid\=\'\{userfile.DataContext.f_userid\}\'$\,$from t_sellinggas where f_userid\=abc$}"
									Path="{m:Exp Str=userfile.DataContext.f_userid!\=null:$from t_sellinggas where f_userid\=\'\{userfile.DataContext.f_userid\}\' order by f_deliverytime desc$\, $from t_sellinggas where f_userid\=abc$}"
									PageIndex="{m:Exp Str=pagerPurchase.PageIndex}" PageSize="{m:Exp Str=pagerPurchase.PageSize}" SumNames="f_preamount,f_pregas"
									IsOld="{m:Exp Str=userfile.DataContext.id!\=null}"/>
                                </a:Data.Items>
                                <sdk:DataGrid.Columns>

                                    <sdk:DataGridTextColumn Header="用户编号" d:IsLocked="True" Binding="{Binding f_userid}" />
                                    <sdk:DataGridTextColumn Header="售气日期" Binding="{Binding f_deliverydate,StringFormat=yyyy-MM-dd}"/>
                                    <sdk:DataGridTextColumn Header="气量" Binding="{Binding f_pregas}"/>
                                    <sdk:DataGridTextColumn Header="金额" Binding="{Binding f_preamount}"/>

                                </sdk:DataGrid.Columns>
                            </sdk:DataGrid>
                        </toolkit:DockPanel>
                    </sdk:TabItem>
                </sdk:TabControl>

            </Grid>
        </Grid>
    </Grid>
</UserControl>
