<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:a="clr-namespace:Com.Aote.Attachs;assembly=s2DLL"
    xmlns:o="clr-namespace:Com.Aote.ObjectTools;assembly=s2DLL"
    xmlns:oo="clr-namespace:Com.Aote.ObjectTools"
    xmlns:b="clr-namespace:Com.Aote.Behaviors;assembly=s2DLL"
	xmlns:c="clr-namespace:Com.Aote.Controls;assembly=s2DLL"
    xmlns:m="clr-namespace:Com.Aote.Marks;assembly=s2DLL"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
    xmlns:data="clr-namespace:System.Windows.Data;assembly=System.Windows"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
	xmlns:System="clr-namespace:System;assembly=mscorlib"
	mc:Ignorable="d" FontSize="13"
	x:Class="Com.Aote.Pages.安检结果查看">

    <Grid x:Name="LayoutRoot">
        <c:Excel x:Name="toExcel" HQL="{m:Exp Str=$\{areafileslist.Path\}}" 
   			Completed="{m:Exp Str=downLoad.Down()}"
	   		Path="{m:Exp Str=$\{reportclient2.BaseAddress\}rs/excel/\{areafiles.ItemsSource.Count\}/f_consumername:用户名|f_cardnum:卡号|f_consumerphone:电话|city:市|f_area:区|REGION_NAME:网格|ROAD:街道|UNIT_NAME:小区名称|CUS_DOM:楼号|CUS_DY:单元|CUS_FLOOR:楼层|CUS_ROOM:房号$}"/>
        <c:DownLoad x:Name="downLoad" Path="{m:Exp Str=$\{reportclient2.BaseAddress\}rs/file/\{toExcel.FileName\}}" Filter="(*.xls)|*.xls"></c:DownLoad>
        <m:ResourceLoad Margin="0,0,0,0">
            <!--安检列表-->
            <o:PagedObjectList Name="areafileslist" WebClientInfo="{StaticResource dbclient}"
				Path="{m:Exp  Str=$select distinct t from T_INSPECTION t  where \{areafilesearch.DataContext.Condition\}$}"
				MultiPath="{m:Exp Str=$from T_INSPECTION t where \{areafilesearch.DataContext.Condition\}$}"
				SumNames=","
				PageSize="{m:Exp Str=pager.PageSize}" PageIndex="{m:Exp Str=pager.PageIndex}" 
                                IsOld="{m:Exp Str='areafilesearch.DataContext.Condition\=\=$End$ or DeleteAction.State==$End$'}"
                               />


            <!--安检状态-->
            <o:ObjectList Name="conditionlist" EntityType="paramvalue" HasEmptyRow="True" WebClientInfo="{StaticResource dbclient}" Path="from paramvalue where param.name='安检状态'"/>
            <o:ObjectList Name="NEEDSREPAIRList" EntityType="paramvalue" HasEmptyRow="True" WebClientInfo="{StaticResource dbclient}" Path="from paramvalue where param.name='是否隐患'"/>
            <b:HQLAction Name="DeleteAction"  WebClientInfo="{StaticResource dbclient}" 
			HQL="{m:Exp Str=$delete from T_INSPECTION where ID \= \'\{areafiles.SelectedItems.ToString(id)\=>SelectionChanged\}\'}">
            </b:HQLAction>

        </m:ResourceLoad>

        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="6*"/>
            </Grid.ColumnDefinitions>
            <c:BusyIndicatorEx BusyContent="正在查询，请稍等" IsBusy="{m:Exp Str=areafiles.ItemsSource.IsBusy}" >
                <Border BorderThickness="1" BorderBrush="#FF9AA2AB" Margin="0" Padding="2" Width="Auto" Height="Auto" VerticalAlignment="Stretch" >
                    <toolkit:DockPanel Width="Auto"   >
                        <toolkit:DockPanel   Background="#94a8cd" toolkit:DockPanel.Dock="Bottom" Margin="0,0,0,5" Height="25" >
                            <TextBlock TextWrapping="Wrap" Text="{m:Exp Str=$共\{areafiles.ItemsSource.Count\}项}" Width="Auto" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Margin="0,0,0,1" Foreground="#FF140000" />
                            <sdk:DataPager x:Name="pager" Source="{Binding ItemsSource.Count, Converter={StaticResource DataPagerConverter}, ElementName=areafiles}"  Margin="0,0,0,-2" PageSize="20"/>
                        </toolkit:DockPanel>
                        <toolkit:DockPanel  x:Name="areafilesearch" toolkit:DockPanel.Dock="Top"  Margin="0,0,0,5"   >
                            <a:Data.Context>
                                <o:SearchObject />
                            </a:Data.Context>
                            <Grid Background="#FF94A8CD">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="50*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="50*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="28"/>
                                    <RowDefinition Height="28"/>
                                    <RowDefinition Height="28"/>
                                    <RowDefinition Height="28"/>
                                    <RowDefinition Height="28"/>
                                    <RowDefinition Height="28"/>
                                </Grid.RowDefinitions>
                                <TextBlock TextWrapping="Wrap" Text="小区名称：" Margin="5,4,0,4" Grid.Column="0" HorizontalAlignment="Right" />
                                <TextBox TextWrapping="Wrap" Grid.Column="1" Text="{m:Bind Path=UNIT_NAME}" Width="Auto" Margin="0" Height="25" >
                                    <a:Data.Prop>
                                        <o:PropertySetter PropertyName="UNIT_NAME"  Operator="UNIT_NAME like '%this%'"/>
                                    </a:Data.Prop>
                                </TextBox>
                                <TextBlock TextWrapping="Wrap" Text="安检员：" Margin="5,4,0,4" Grid.Column="2" HorizontalAlignment="Right"/>
                                <TextBox TextWrapping="Wrap" Grid.Column="3" Text="{m:Bind Path=SAVE_PEOPLE}" Width="Auto" Margin="0" Height="25" >
                                    <a:Data.Prop>
                                        <o:PropertySetter PropertyName="SAVE_PEOPLE"  Operator="SAVE_PEOPLE like '%this%'"/>
                                    </a:Data.Prop>
                                </TextBox>
                                <TextBlock TextWrapping="Wrap" Text="楼号：" Grid.Row="1" Margin="5,4,0,4" HorizontalAlignment="Right"/>
                                <TextBox TextWrapping="Wrap" Grid.Column="1" Grid.Row="1" Text="{m:Bind Path=CUS_DOM}" Width="Auto" Margin="0" Height="25" >
                                    <a:Data.Prop>
                                        <o:PropertySetter PropertyName="CUS_DOM"  Operator="CUS_DOM like '%this%'"/>
                                    </a:Data.Prop>
                                </TextBox>
                                <TextBlock TextWrapping="Wrap" Text="单元：" Grid.Row="1" Grid.Column="2" Margin="5,4,0,4"  HorizontalAlignment="Right"/>
                                <TextBox TextWrapping="Wrap" Grid.Column="3" Grid.Row="1" Text="{m:Bind Path=CUS_DY}" Width="Auto" Margin="0" Height="25" >
                                    <a:Data.Prop>
                                        <o:PropertySetter PropertyName="CUS_DY"  Operator="CUS_DY like '%this%'"/>
                                    </a:Data.Prop>
                                </TextBox>
                                <TextBlock TextWrapping="Wrap" Grid.Row="2" Text="楼层：" Margin="5,4,0,4"  HorizontalAlignment="Right"/>
                                <TextBox TextWrapping="Wrap" Grid.Row="2" Grid.Column="1" Text="{m:Bind Path=CUS_FLOOR}" Width="Auto" Margin="0" Height="25" >
                                    <a:Data.Prop>
                                        <o:PropertySetter PropertyName="CUS_FLOOR"  Operator="CUS_FLOOR like '%this%'"/>
                                    </a:Data.Prop>
                                </TextBox>
                                <TextBlock TextWrapping="Wrap" Grid.Row="2" Text="房号：" Margin="0,7,0,1"  HorizontalAlignment="Right" Grid.Column="2"/>
                                <TextBox TextWrapping="Wrap" Grid.Row="2" Grid.Column="3" Text="{m:Bind Path=CUS_ROOM}" Width="Auto" Margin="0,4,0,27" Height="25" Grid.RowSpan="2" >
                                    <a:Data.Prop>
                                        <o:PropertySetter PropertyName="CUS_ROOM"  Operator="CUS_ROOM like '%this%'"/>
                                    </a:Data.Prop>
                                </TextBox>
                                <TextBlock TextWrapping="Wrap" Text="安检情况：" Margin="5,4,0,4" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Right"/>
                                <ComboBox Name="condition"   SelectedValue="{m:Bind Path=CONDITION}" Grid.Row="3" Grid.Column="1" ItemsSource="{m:Exp Str=conditionlist}" SelectedValuePath="code"  Margin="0" DisplayMemberPath="name"   Height="25" >
                                    <a:Data.Prop>
                                        <o:PropertySetter PropertyName="CONDITION"  Operator="t.CONDITION like 'this'"/>
                                    </a:Data.Prop>
                                </ComboBox>
                                <TextBlock TextWrapping="Wrap" Text="是否隐患：" Margin="5,4,0,4" Grid.Column="2" Grid.Row="3" HorizontalAlignment="Right"/>
                                <ComboBox Name="NEEDS_REPAIR"   SelectedValue="{m:Bind Path=NEEDS_REPAIR}" Grid.Row="3" Grid.Column="3" ItemsSource="{m:Exp Str=NEEDSREPAIRList}" SelectedValuePath="name"  Margin="0" DisplayMemberPath="name"   Height="25" >
                                    <a:Data.Prop>
                                        <o:PropertySetter PropertyName="NEEDS_REPAIR"  Operator="t.NEEDS_REPAIR like 'this'"/>
                                    </a:Data.Prop>
                                </ComboBox>
                                <TextBlock TextWrapping="Wrap" Grid.Row="4" Text="安检开始日期：" Margin="0,7,0,1"  HorizontalAlignment="Right" Grid.Column="0"/>
                                <sdk:DatePicker SelectedDate="{m:Bind Path=f_anjianriqi}" Margin="0"  Height="25" VerticalAlignment="Stretch" Grid.Row="4" Grid.Column="1" >
                                    <a:Data.Prop>
                                        <o:PropertySetter PropertyName="f_anjianriqi" Value="{m:Exp Str=SysTime.MonthsBeforeToday(1)}"
								Operator=" substring(ARRIVAL_TIME,1,10) >= substring('this',1,10)"/>
                                    </a:Data.Prop>
                                </sdk:DatePicker>
                                <TextBlock TextWrapping="Wrap" Grid.Row="4" Text="安检截至日期：" Margin="0,7,0,1"  HorizontalAlignment="Right" Grid.Column="2"/>
                                <sdk:DatePicker SelectedDate="{m:Bind Path=f_anjianriqi2}" Margin="0"  Height="25" VerticalAlignment="Stretch" Grid.Row="4" Grid.Column="3" >
                                    <a:Data.Prop>
                                        <o:PropertySetter PropertyName="f_anjianriqi2" Value="{m:Exp Str=SysTime.Today}"
								Operator=" substring(ARRIVAL_TIME,1,10) ^= substring('this',1,10)"/>
                                    </a:Data.Prop>
                                </sdk:DatePicker>
                                <TextBlock TextWrapping="Wrap" Grid.Row="5" Text="卡号：" Margin="5,4,0,4"  HorizontalAlignment="Right"/>
                                <TextBox TextWrapping="Wrap" Grid.Row="5" Grid.Column="1" Text="{m:Bind Path=f_cardnum}" Width="Auto" Margin="0" Height="25" >
                                    <a:Data.Prop>
                                        <o:PropertySetter PropertyName="f_cardnum"  Operator="f_cardnum like '%this%'"/>
                                    </a:Data.Prop>
                                </TextBox>
                                <Button Content="查询" x:Name="areasearchbutton" Grid.Column="2" Grid.Row="5" Click="{m:Exp Str=areafilesearch.DataContext.Search()}" Margin="0,1,10,1" HorizontalAlignment="Right" Width="70" />
                                <Button Content="导出档案" x:Name="exportBtn" Click="{m:Exp Str=toExcel.ToExcel()}" Grid.Column="3" Grid.Row="5"  HorizontalAlignment="Left" Width="70" Margin="15,0,0,0" IsEnabled="{m:Exp Str=areafiles.ItemsSource.Count\>0}" />
                                <Button Content="删除"  x:Name="delete" Grid.Column="3" Grid.Row="5" HorizontalAlignment="Right" IsEnabled="{m:Exp Str=areafiles.SelectedItem!\=null}" Click="{m:Exp Str=DeleteAction.Invoke()}" Width="70"  VerticalAlignment="Stretch"  d:LayoutOverrides="Height" />

                            </Grid>

                        </toolkit:DockPanel>

                        <sdk:DataGrid x:Name="areafiles" Margin="0" ItemsSource="{m:Exp Str=areafileslist}" 
							AutoGenerateColumns="False" Width="Auto" Background="{x:Null}" IsReadOnly="True">
                            <sdk:DataGrid.Columns>
                                <sdk:DataGridTextColumn d:IsLocked="True" Header="序号" Binding="{Binding Index}"/>
                                <sdk:DataGridTextColumn Header="安检情况" Binding="{Binding CONDITION}"/>
                                <sdk:DataGridTextColumn Header="安检类型" Binding="{Binding f_checktype}"/>
                                <sdk:DataGridTextColumn Header="小区名称" Binding="{Binding UNIT_NAME}"/>
                                <sdk:DataGridTextColumn Header="楼号" Binding="{Binding CUS_DOM}"/>
                                <sdk:DataGridTextColumn Header="单元" Binding="{Binding CUS_DY}"/>
                                <sdk:DataGridTextColumn Header="楼层" Binding="{Binding CUS_FLOOR}"/>
                                <sdk:DataGridTextColumn Header="房号" Binding="{Binding CUS_ROOM}"/>
                                <sdk:DataGridTextColumn Header="安检员" Binding="{Binding SAVE_PEOPLE}"/>
                                <sdk:DataGridTextColumn Header="用户名称" Binding="{Binding f_consumername}"/>
                            </sdk:DataGrid.Columns>
                        </sdk:DataGrid>

                    </toolkit:DockPanel>
                </Border>
            </c:BusyIndicatorEx>
            <Grid x:Name="userfile" DataContext="{m:Exp Str=areafiles.SelectedItem}" Margin="0,0,0,0"  Grid.Column="1" Height="700" DataContextChanged="userfile_DataContextChanged" >
                <!--非民用主操作区-->
                <sdk:TabControl HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0" Width="810" Height="Auto">
                    <sdk:TabItem Header="基本信息">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Width="auto" Height="auto">
                            <Grid Margin="0" HorizontalAlignment="Stretch" Height="800">
                                <Grid.RowDefinitions>

                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>

                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>

                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="0"/>
                                    <RowDefinition Height="30"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="98.343"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="130"/>
                                    <ColumnDefinition Width="130"/>
                                    <ColumnDefinition Width="128"/>
                                    <ColumnDefinition Width="108"/>
                                    <ColumnDefinition Width="86.552"/>
                                    <ColumnDefinition Width="27.448"/>

                                </Grid.ColumnDefinitions>

                                <TextBlock Text="状态：" Grid.Column="0" Grid.Row="0" TextWrapping="Wrap" TextAlignment="Right" Grid.RowSpan="2" Grid.ColumnSpan="2" />
                                <TextBox  IsEnabled="False" Text="{m:Bind Path=CONDITION}" Grid.Column="2"  Grid.Row="0" TextWrapping="Wrap" Height="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="Auto" Margin="0" Grid.RowSpan="1" />
                                <TextBlock Text="发到访不遇卡：" Grid.Column="5" Grid.Row="2" TextWrapping="Wrap" TextAlignment="Right" Grid.RowSpan="2" />
                                <TextBox  IsEnabled="False" Text="{m:Bind Path=HASNOTIFIED}" Grid.Column="6"  Grid.Row="2" TextWrapping="Wrap" Height="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="Auto" Margin="0,0,-16,0" Grid.RowSpan="1" Grid.ColumnSpan="2" />
                                <TextBlock Text="日期：" Grid.Column="3" Margin="0,2,0,23" Grid.Row="0" TextWrapping="Wrap" TextAlignment="Right" Grid.RowSpan="2" />
                                <TextBox  IsEnabled="False" Text="{m:Bind Path=f_anjianriqi}" Grid.Column="4"  Grid.Row="0" TextWrapping="NoWrap" Height="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="Auto" Margin="0" Grid.RowSpan="1" />
                                <TextBlock Text="到达时间：" Grid.Column="5" Margin="34,2,0,23" Grid.Row="0" TextWrapping="Wrap" TextAlignment="Right" Grid.RowSpan="2" />
                                <TextBox  IsEnabled="False" Text="{m:Bind Path=ARRIVAL_TIME}" Grid.Column="6"  Grid.Row="0" TextWrapping="NoWrap" Height="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="Auto" Margin="0,-2,-16,2" Grid.RowSpan="1" Grid.ColumnSpan="2" />
                                <TextBlock Text="离开时间：" Grid.Column="0" Margin="0,2,0,23" Grid.Row="1" TextWrapping="Wrap" TextAlignment="Right" Grid.RowSpan="2" Grid.ColumnSpan="2" />
                                <TextBox  IsEnabled="False" Text="{m:Bind Path=DEPARTURE_TIME}" Grid.Column="2"  Grid.Row="1" TextWrapping="NoWrap" Height="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="Auto" Margin="0" Grid.RowSpan="1" Grid.ColumnSpan="1" />
                                <TextBlock Text="安检单类型：" Grid.Column="3" Grid.Row="1" TextWrapping="Wrap" TextAlignment="Right" />
                                <TextBox IsEnabled="False" Text="{m:Bind Path=f_checktype}" Grid.Column="4"  Grid.Row="1" TextWrapping="Wrap" Height="Auto" VerticalAlignment="Stretch" RenderTransformOrigin="-1.739,-0.923" HorizontalAlignment="Stretch" Width="Auto" Margin="0" Grid.RowSpan="1" />
                                <TextBlock Text="卡号：" Grid.Column="5" Grid.Row="1" TextWrapping="Wrap" TextAlignment="Right" Margin="34,0,0,0" />
                                <TextBox IsEnabled="False" Text="{m:Bind Path=f_cardnum}" Grid.Column="6"  Grid.Row="0" TextWrapping="Wrap" Height="Auto" VerticalAlignment="Stretch" RenderTransformOrigin="-1.739,-0.923" HorizontalAlignment="Stretch" Width="Auto" Margin="0,21,-16,4" Grid.RowSpan="2" Grid.ColumnSpan="2" />
                                <TextBlock Text="用户名：" Grid.Column="0" Grid.Row="2" TextWrapping="Wrap" TextAlignment="Right" Grid.ColumnSpan="2" />
                                <TextBox IsEnabled="False" Text="{m:Bind Path=f_consumername}" Grid.Column="2"  Grid.Row="2" TextWrapping="Wrap" Height="Auto" VerticalAlignment="Stretch" RenderTransformOrigin="-1.739,-0.923" HorizontalAlignment="Stretch" Width="Auto" Margin="0" Grid.RowSpan="1" />
                                <TextBlock Text="电话：" Grid.Column="3" Grid.Row="2" TextWrapping="Wrap" TextAlignment="Right"  HorizontalAlignment="Right" Width="95" Grid.RowSpan="2"  />
                                <TextBox  IsEnabled="False" Text="{m:Bind Path=f_consumerphone}" Grid.Column="4" Margin="0,2" Grid.Row="2" TextWrapping="Wrap" Height="Auto" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" Width="Auto"/>
                                <!--
                                <TextBlock Text="市：" Grid.Column="0" Margin="0,2,0,23" Grid.Row="3" TextWrapping="Wrap" TextAlignment="Right" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
                                <TextBox  IsEnabled="False" Text="{m:Bind Path=city}" Grid.Column="2"  Grid.Row="3" TextWrapping="Wrap" Height="Auto" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" Width="Auto" Margin="0,3,0,22" Grid.RowSpan="2" />
                                <TextBlock Text="区：" Grid.Column="3" Margin="0,2,0,23" Grid.Row="3"  TextWrapping="Wrap" TextAlignment="Right" Grid.RowSpan="2"/>
                                <TextBox  IsEnabled="False" Text="{m:Bind Path=f_area}" Grid.Column="4" Margin="0" Grid.Row="3" Grid.ColumnSpan="1" TextWrapping="Wrap" Height="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="Auto"/>
                                -->
                                <TextBlock Text="街道：" Grid.Column="0" Margin="0,2,0,23" Grid.Row="3"  TextWrapping="Wrap" TextAlignment="Right" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
                                <TextBox  IsEnabled="False" Text="{m:Bind Path=ROAD}" Grid.Column="2" Margin="0" Grid.Row="3" Grid.ColumnSpan="1" TextWrapping="Wrap" Height="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="Auto"/>

                                <TextBlock Text="小区名称：" Grid.Column="2" Margin="0,2,0,23" Grid.Row="3" TextWrapping="Wrap" TextAlignment="Right" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
                                <TextBox  IsEnabled="False" Text="{m:Bind Path=UNIT_NAME}" Grid.Column="4"  Grid.Row="3" TextWrapping="Wrap" Height="Auto" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" Width="Auto" Margin="0,2,0,22" Grid.RowSpan="2" />
                                <TextBlock Text="楼号：" Grid.Column="5" Margin="0,2,0,22" Grid.Row="3" TextWrapping="Wrap" TextAlignment="Right" Grid.RowSpan="2"/>
                                <TextBox  IsEnabled="False" Text="{m:Bind Path=CUS_DOM}" Grid.Column="6" Margin="0,2,-16,0" Grid.Row="3" TextWrapping="Wrap" Height="Auto" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" Width="Auto" Grid.ColumnSpan="2"  />
                                <TextBlock Text="单元：" Grid.Column="0" Margin="0,2,0,17" Grid.Row="4" TextWrapping="Wrap" TextAlignment="Right" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
                                <TextBox  IsEnabled="False" Text="{m:Bind Path=CUS_DY}" Grid.Column="2" Margin="0,2,0,0" Grid.Row="4" TextWrapping="Wrap" Height="Auto" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" Width="Auto" Grid.ColumnSpan="1" />
                                <TextBlock Text="楼层：" Grid.Column="2" Margin="0,8,0,17" Grid.Row="4" TextWrapping="Wrap" TextAlignment="Right" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
                                <TextBox  IsEnabled="False" Text="{m:Bind Path=CUS_FLOOR}" Grid.Column="4" Margin="0" Grid.Row="4" TextWrapping="Wrap" Height="Auto" VerticalAlignment="Stretch" RenderTransformOrigin="-1.739,-0.923" HorizontalAlignment="Stretch" Width="Auto" />
                                <TextBlock Text="房号：" Grid.Column="5" Margin="0,8,0,17" Grid.Row="4" TextWrapping="Wrap" TextAlignment="Right" Grid.RowSpan="2"/>
                                <TextBox  IsEnabled="False" Text="{m:Bind Path=CUS_ROOM}" Grid.Column="6" Margin="0,0,-16,0" Grid.Row="4" TextWrapping="Wrap" Height="Auto" VerticalAlignment="Stretch" RenderTransformOrigin="-1.739,-0.923" HorizontalAlignment="Stretch" Width="Auto" Grid.ColumnSpan="2" />
                                <TextBlock Text="用气设备：" Grid.Column="5" Margin="0,3,0,17" Grid.Row="8" TextWrapping="Wrap" TextAlignment="Right" Grid.RowSpan="2"/>
                                <TextBox  IsEnabled="False" Text="{m:Bind Path=f_devices}" Grid.Column="6" Margin="0,0,-16,0" Grid.Row="8" TextWrapping="Wrap" Height="Auto" VerticalAlignment="Stretch" RenderTransformOrigin="-1.739,-0.923" HorizontalAlignment="Stretch" Width="Auto" Grid.ColumnSpan="2" />
                                <TextBlock Text="用户档案地址：" Grid.Column="0" Margin="0,3,0,22" Grid.Row="6" TextWrapping="Wrap" TextAlignment="Right" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
                                <TextBox  IsEnabled="False" Text="{m:Bind Path=f_archiveaddress}" Grid.Column="2" Margin="0" Grid.Row="6" Grid.ColumnSpan="3" TextWrapping="Wrap" Height="Auto" VerticalAlignment="Stretch" RenderTransformOrigin="-1.739,-0.923" HorizontalAlignment="Stretch" Width="Auto"  />
                                <TextBlock Text="常住人口：" Grid.Column="5" Margin="0,2,0,23" Grid.Row="6" TextWrapping="Wrap" TextAlignment="Right" Grid.RowSpan="2"/>
                                <TextBox IsEnabled="False"  Text="{m:Bind Path=f_renkou}" Grid.Column="6" Margin="0,3,-16,22" Grid.Row="6" TextWrapping="Wrap" Height="Auto" VerticalAlignment="Stretch" RenderTransformOrigin="-1.739,-0.923" HorizontalAlignment="Stretch" Width="Auto" Grid.ColumnSpan="2" Grid.RowSpan="2" />
                                <TextBlock Text="租住：" Grid.Column="0" Margin="0,3,0,0" Grid.Row="7" TextWrapping="Wrap" TextAlignment="Right" Grid.ColumnSpan="2" />
                                <TextBox  IsEnabled="False" Text="{m:Bind Path=f_zuzhu}" Grid.Column="2" Margin="0" Grid.Row="7" TextWrapping="Wrap" Height="Auto" VerticalAlignment="Stretch" RenderTransformOrigin="-1.739,-0.923" HorizontalAlignment="Stretch" Width="Auto"  />
                                <TextBlock Text="小区性质：" Grid.Column="3" Margin="0,3,0,5" Grid.Row="7" TextWrapping="Wrap" TextAlignment="Right" Grid.RowSpan="1"  />
