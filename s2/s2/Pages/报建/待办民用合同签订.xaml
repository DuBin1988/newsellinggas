    xmlns:ec="http://schemas.microsoft.com/expression/2010/controls"
    mc:Ignorable="d">

    <Grid x:Name="LayoutRoot">
        <m:ResourceLoad>

            <!--流程启动对象-->
            <o:GeneralObject  Name="startprocess" WebClientInfo="{StaticResource server}" 
		        EntityType="t_test" 
	 	        IsInit="{m:Exp Str='this.State==$End$'}" CustomePath="{m:Exp Str=$/workflow/perfomactivity/\{myhtqdList.SelectedItem.actid\}/\{LoginUser.name\}/\{LoginUser.id\}}"
                 >
            </o:GeneralObject>

            <o:PagedList Name="myhtqd" WebClientInfo="{StaticResource dbclient}" IsOld="{m:Exp Str='myhtqdInfo.DataContext.State==$End$ |or| SubmitAction.State==$End$ |or| myhtqdPager.DataContext.State==$End$ |or| myhtqdBack=>Click!=null'}"
                Names="id,f_substate,f_code,f_username,f_phone,f_applydept,f_address,f_applycount,f_date,actid,f_processid" 
                HQL="{m:Exp Str=$select apply.id\,apply.f_substate\,apply.f_code\,apply.f_username\,apply.f_phone\,apply.f_applydept\,apply.f_address\,apply.f_applycount\,CONVERT(varchar\, apply.f_date\,23)f_date\,act.id actid\,apply.f_processid
                from activityins act 
                join t_actorperson p 
                on act.actorexpression \= p.actorid 
                join t_apply apply 
                on apply.f_processid\=act.processid 
                where \{myhtqdSearch.DataContext.Condition\} and act.state\=\'开始活动\' and act.processName\=\'报装流程\' and act.defname\=\'合同签订\' and p.userid\=\'\{LoginUser.ename\}\'}"
                Path="sql" PageIndex="{m:Exp Str=myhtqdPager.PageIndex}" PageSize="{m:Exp Str=myhtqdPager.PageSize}" SumNames="," />

            <o:GeneralObject Name="myhtqdObj" EntityType="t_apply" WebClientInfo="{StaticResource dbclient}" 
			    Path="{m:Exp Str=myhtqdList.SelectedItem \!\=null:$one/from t_apply where id\=\{myhtqdList.SelectedItem.id\}$\,$null$}"  
                IsInit="{m:Exp Str='this.State==$End$ or myhtqdBack=>Click!=null'}">
                <o:PropertySetter PropertyName="f_applycustomer" Default="{m:Exp Str=userlist_myhtqd}" />

            </o:GeneralObject>

            <!--民用合同签订-->
            <o:ObjectList Name="userlist_myhtqd" WebClientInfo="{StaticResource dbclient}" IsOld="{m:Exp Str='myhtqdInfo.DataContext.State==$End$ and myhtqdBack=>Click!=null'}"
            Path="{m:Exp Str='myhtqdInfo.DataContext.id!=null:$from t_applycustomer where applyid={myhtqdInfo.DataContext.id}$,$null$'}" EntityType="t_applycustomer" />
            <o:ObjectList Name="userimagelist_myhtqd" Source="{m:Exp Str=nopeople_gcbmysh.SelectedItem.f_customerimage}" EntityType="t_customerimage" />
           
          <b:HQLAction Name="SubmitAction"  WebClientInfo="{StaticResource dbclient}" 
			HQL="{m:Exp Str=$update t_apply set f_htqdzt\=\'已完成\' \,f_substate\=null where id in (\{myhtqdList.SelectedItems.ToString(id)\=>SelectionChanged\}) and f_substate \=\'完成\'}"/>
        </m:ResourceLoad>
        <!--民用合同签订-->
        <c:BusyIndicatorEx BusyContent="正在查询，请稍等" IsBusy="{m:Exp Str=myhtqd.IsBusy}">
            <StackPanel Margin="2,0,2,8">
