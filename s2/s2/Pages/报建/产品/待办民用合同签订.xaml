                                            <a:Data.Prop>
                                                <o:PropertySetter PropertyName="f_username" />
                                            </a:Data.Prop>
                                        </TextBox>
                                        <TextBox Text="{m:Bind Path=f_phone}"  Grid.Column="1" Margin="0,2" TextWrapping="Wrap" Grid.Row="2" IsReadOnly="True" Height="Auto">
                                            <a:Data.Prop>
                                                <o:PropertySetter PropertyName="f_phone" />
                                            </a:Data.Prop>
                                        </TextBox>
                                        <TextBox Text="{m:Bind Path=f_address}"  Grid.Column="3" Margin="0,2" TextWrapping="Wrap" Grid.Row="2" IsReadOnly="True" Height="Auto" Grid.ColumnSpan="3">
                                            <a:Data.Prop>
                                                <o:PropertySetter PropertyName="f_address" />
                                            </a:Data.Prop>
                                        </TextBox>
                                        <TextBox Text="{m:Bind Path=f_area}"  Grid.Column="5" Margin="0,2" TextWrapping="Wrap" Grid.Row="4" IsReadOnly="True" Height="Auto">
                                            <a:Data.Prop>
                                                <o:PropertySetter PropertyName="f_area" />
                                            </a:Data.Prop>
                                        </TextBox>
                                        <TextBox Text="{m:Bind Path=f_usertypepro}"  Grid.Column="1" Margin="0,2" TextWrapping="Wrap" Grid.Row="3" IsReadOnly="True" Height="Auto">
                                            <a:Data.Prop>
                                                <o:PropertySetter PropertyName="f_usertypepro" />
                                            </a:Data.Prop>
                                        </TextBox>
                                        <TextBlock Margin="0,6,0,0" TextWrapping="Wrap" TextAlignment="Right"  Text="用户单位：" Grid.Row="1"/>
                                        <TextBox Text="{m:Bind Path=f_minyongdept}" IsReadOnly="True" Grid.Column="1" Margin="0,2"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="Auto" Grid.Row="1" Grid.ColumnSpan="3"  Height="Auto">
                                            <a:Data.Prop>
                                                <o:PropertySetter PropertyName="f_minyongdept"/>
                                            </a:Data.Prop>
                                        </TextBox>
                                        <TextBox Text="{m:Bind Path=f_usertype}" d:LayoutOverrides="Width" Grid.Column="3" Margin="0,2" TextWrapping="Wrap" Grid.Row="3" IsReadOnly="True" Height="Auto">
                                            <a:Data.Prop>
                                                <o:PropertySetter PropertyName="f_usertype" Default="民用"/>
                                            </a:Data.Prop>
                                        </TextBox>
                                        <TextBlock TextWrapping="Wrap" Text="部 门：" Width="Auto" Margin="0,6,0,0" Grid.Row="5" TextAlignment="Right"/>
                                        <TextBox Text="{m:Bind Path=f_htsigndepa}" Margin="0,2" TextWrapping="Wrap" Width="Auto" Height="Auto" Grid.Column="1" Grid.Row="5" IsReadOnly="True">
                                            <a:Data.Prop>
                                                <o:PropertySetter PropertyName="f_htsigndepa" 
        									Default="{m:Exp Str=LoginUser.f_parentname}"/>
                                            </a:Data.Prop>
                                        </TextBox>
                                        <TextBlock TextWrapping="Wrap" Text="操 作 人：" Width="Auto" Margin="0,6,0,0" Grid.Column="2" Grid.Row="5" HorizontalAlignment="Right" TextAlignment="Right"/>
                                        <TextBox Text="{m:Bind Path=f_htsignoper}" Margin="0,2" TextWrapping="Wrap" Width="Auto" Height="Auto" Grid.Column="3" Grid.Row="5" IsReadOnly="True">
                                            <a:Data.Prop>
                                                <o:PropertySetter PropertyName="f_htsignoper" 
        									Default="{m:Exp Str=LoginUser.name}"/>
                                            </a:Data.Prop>
                                        </TextBox>
                                        <TextBlock TextWrapping="Wrap" Text="日 期：" Width="Auto" Margin="0,6,0,0" Grid.Row="5" Grid.Column="4" TextAlignment="Right"/>
                                        <sdk:DatePicker SelectedDate="{m:Bind Path=f_htsigndate}" Margin="0,3" IsEnabled="False" SelectedDateFormat="Short" Width="Auto" Height="Auto" Grid.Column="5" HorizontalAlignment="Stretch" Grid.Row="5" >
                                            <a:Data.Prop>
                                                <o:PropertySetter PropertyName="f_htsigndate"
        									Default="{m:Exp Str=SysTime.Today}"/>
                                            </a:Data.Prop>
                                        </sdk:DatePicker>
                                        <TextBlock Margin="0,6,0,0" TextWrapping="Wrap" Text="用气类型：" TextAlignment="Right" RenderTransformOrigin="0.393,2.625" Grid.Column="4" Grid.Row="3"/>
                                        <ComboBox IsEnabled="False"  DisplayMemberPath="name" SelectedValuePath="name" ItemsSource="{m:Exp Str=usegastypelist}" SelectedValue="{m:Bind Path=f_gastype}" Grid.Column="5" Margin="0,3" Grid.Row="3"   Height="Auto" RenderTransformOrigin="-4.833,0.84" HorizontalAlignment="Stretch" Width="Auto" Grid.ColumnSpan="1">
                                            <a:Data.Prop>
                                                <o:PropertySetter PropertyName="f_gastype" NotNull="True"/>
                                            </a:Data.Prop>
                                        </ComboBox>
                                        <TextBlock Margin="0,6,0,0" TextWrapping="Wrap" Text="放线人：" TextAlignment="Right" RenderTransformOrigin="0.393,2.625" Grid.Row="4"/>
                                        <TextBox Text="{m:Bind Path=f_survey}"  Grid.Column="1" Margin="0,2" TextWrapping="Wrap" Grid.Row="4" IsReadOnly="True" Height="Auto">
                                            <a:Data.Prop>
                                                <o:PropertySetter PropertyName="f_survey" />
                                            </a:Data.Prop>
                                        </TextBox>
                                        <TextBlock Margin="0,6,0,0" TextWrapping="Wrap" Text="设计人：" TextAlignment="Right" RenderTransformOrigin="0.393,2.625" Grid.Column="2" Grid.Row="4"/>
                                        <TextBox Text="{m:Bind Path=f_designers}" Grid.Column="3" Margin="0,2" TextWrapping="Wrap" Grid.Row="4" IsReadOnly="True" Height="Auto" d:LayoutOverrides="Width">
                                            <a:Data.Prop>
                                                <o:PropertySetter PropertyName="f_designers" />
                                            </a:Data.Prop>
                                        </TextBox>
                                    </Grid>
                                    <Grid Margin="0,0,5,0" Grid.RowSpan="1" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="355" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="62"/>
                                            <ColumnDefinition Width="208"/>
                                            <ColumnDefinition Width="70" />
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="25"/>
                                            <RowDefinition Height="25"/>
                                            <RowDefinition Height="25"/>
                                            <RowDefinition Height="25"/>
                                            <RowDefinition Height="0"/>
                                            <RowDefinition Height="0"/>
                                            <RowDefinition Height="25"/>
                                            <RowDefinition Height="45"/>
                                            <RowDefinition Height="45"/>
                                            <RowDefinition Height="45"/>
                                            <RowDefinition Height="45"/>
                                            <RowDefinition Height="45"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Margin="0" TextWrapping="Wrap" Text="供 气 人" TextAlignment="Center" Grid.Row="1" Height="25" VerticalAlignment="Bottom" />
                                        <TextBlock Margin="0" TextWrapping="Wrap" Text="用 气 人" TextAlignment="Center" Grid.Row="2"/>
                                        <TextBlock Margin="0,0,5,0" TextWrapping="Wrap" Text="电 话" TextAlignment="Right" Grid.Column="3" Grid.Row="2" Grid.ColumnSpan="1"/>
                                        <TextBlock Margin="0" TextWrapping="Wrap" Text="用气地址" TextAlignment="Center" Grid.Row="3"/>
                                        <TextBox Text="{m:Bind Path=f_gtren}"  Grid.Column="1" Margin="0,0,0,1" TextWrapping="Wrap" Grid.Row="1" IsReadOnly="True" Grid.ColumnSpan="2" Height="22" VerticalAlignment="Bottom" d:LayoutOverrides="Height">
                                            <a:Data.Prop>
                                                <o:PropertySetter PropertyName="f_gtren" 
