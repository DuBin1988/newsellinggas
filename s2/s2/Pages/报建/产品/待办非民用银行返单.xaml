                                        <TextBox Text="{m:Bind Path=f_cslnum}" Margin="0,0,0,0" TextWrapping="Wrap"  IsReadOnly="False" Width="108" Height="25">
                                            <a:Data.Prop>
                                                <o:PropertySetter PropertyName="f_cslnum" />
                                            </a:Data.Prop>
                                        </TextBox>
                                        <TextBlock Text="台" HorizontalAlignment="Left" Margin="5,0,0,0" TextWrapping="Wrap" />
