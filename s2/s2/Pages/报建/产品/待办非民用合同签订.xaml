                                    </TextBox>
                                    <TextBox Text="{m:Bind Path=f_usertype}" Grid.Column="4" Margin="96,0,76,4" TextWrapping="Wrap" Grid.Row="1" IsReadOnly="True" Height="25" HorizontalAlignment="Stretch" Width="Auto" VerticalAlignment="Stretch" Grid.RowSpan="1">
