                                    <TextBlock Margin="0,4,0,2" TextWrapping="Wrap" Text="用气性质：" TextAlignment="Right" RenderTransformOrigin="0.393,2.625" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Right" Width="67"/>
