                                    <TextBlock Margin="0,0,0,2" TextWrapping="Wrap" Text="用 气 人" TextAlignment="Center" Grid.Row="4" Height="27"/>
                                    <TextBlock Margin="0,0,0,2" TextWrapping="Wrap" Text="联系人电话" TextAlignment="Right" Grid.Column="3" Grid.Row="5" Grid.ColumnSpan="1" Height="27"/>
                                    <TextBlock Margin="0,0,0,2" TextWrapping="Wrap" Text="用气地址" TextAlignment="Center" Grid.Row="5" Height="27"/>
                                    <TextBox Text="{m:Bind Path=f_gtren}"  Grid.Column="1" Margin="0,0,0,4" TextWrapping="Wrap" Grid.Row="3" IsReadOnly="True" Grid.ColumnSpan="2" Height="25">
                                        <a:Data.Prop>
                                            <o:PropertySetter PropertyName="f_gtren" 
            								Default="{m:Exp Str=$******燃气有限责任公司$}"/>
                                        </a:Data.Prop>
                                    </TextBox>
                                    <TextBox Text="{m:Bind Path=f_username}"  Grid.Column="1" Margin="0,0,0,4" TextWrapping="Wrap" Grid.Row="4" IsReadOnly="True" Grid.ColumnSpan="2" Height="25">
