                                            <o:PropertySetter PropertyName="f_username" />
                                        </a:Data.Prop>
                                    </TextBox>
                                    <TextBox Text="{m:Bind Path=f_phone}" Grid.Column="4" Margin="4,0,0,4" TextWrapping="Wrap" Grid.Row="5" IsReadOnly="True" Height="25" HorizontalAlignment="Left" Width="146" >
                                        <a:Data.Prop>
                                            <o:PropertySetter PropertyName="f_phone" />
                                        </a:Data.Prop>
                                    </TextBox>
                                    <TextBox Text="{m:Bind Path=f_address}" Grid.Column="1" Margin="0,0,0,4" TextWrapping="Wrap" Grid.Row="5" IsReadOnly="True" Grid.ColumnSpan="2" Height="25">
                                        <a:Data.Prop>
                                            <o:PropertySetter PropertyName="f_address" />
                                        </a:Data.Prop>
                                    </TextBox>
                                    <StackPanel Margin="0" Grid.Row="2" Orientation="Horizontal" Grid.ColumnSpan="5">
                                        <TextBlock HorizontalAlignment="Left"  Margin="10,0,0,0" TextWrapping="Wrap" Text="合同编号" Height="27" VerticalAlignment="Bottom"/>
                                        <TextBox Text="{m:Bind Path=f_htnum}" Margin="9,2,0,2" TextWrapping="Wrap" IsReadOnly="False" Height="25" Width="260" >
                                            <a:Data.Prop>
                                                <o:PropertySetter PropertyName="f_htnum" NotNull="True" 
												/>
                                            </a:Data.Prop>
                                        </TextBox>
                                        <TextBlock TextWrapping="Wrap" Margin="20,0,0,0" Text="签订日期" Height="27"/>
                                        <sdk:DatePicker SelectedDate="{m:Bind Path=f_signdate}" Margin="5,2" Width="137" Height="25" Grid.Row="4" Grid.Column="5" SelectedDateFormat="Short" >
                                            <a:Data.Prop>
                                                <o:PropertySetter PropertyName="f_signdate"
            									Default="{m:Exp Str=SysTime.Today}"/>
                                            </a:Data.Prop>
                                        </sdk:DatePicker>
                                    </StackPanel>
                                    <TextBlock TextAlignment="Right" TextWrapping="Wrap" Text="供气质量及方式" Grid.Row="8" Grid.ColumnSpan="2" Margin="0,0,16,0" Height="25"/>
                                    <TextBox Text="{m:Bind Path=f_givegaszl}" Grid.Column="2" Margin="1,2,0,2" Grid.Row="8" TextWrapping="Wrap" Grid.ColumnSpan="2" HorizontalAlignment="Left" Width="449" IsReadOnly="True" Height="25" d:LayoutOverrides="GridBox" >
                                        <a:Data.Prop>
                                            <o:PropertySetter PropertyName="f_givegaszl"
            								Default="{m:Exp Str=$符合天然气———SG7514标准$}" />
                                        </a:Data.Prop>
                                    </TextBox>

                                    <TextBlock Grid.Column="1" Grid.Row="12" TextWrapping="Wrap" Text="合同备注：" TextAlignment="Right" VerticalAlignment="Center" Margin="0"/>
                                    <TextBox Grid.ColumnSpan="2" Text="{m:Bind Path=f_beizhu}" Grid.Column="2" Margin="0" Grid.Row="12" TextWrapping="Wrap" Height="Auto" HorizontalAlignment="Left" Width="450" d:LayoutOverrides="GridBox">
                                        <a:Data.Prop>
                                            <o:PropertySetter PropertyName="f_beizhu"  />
                                        </a:Data.Prop>
                                    </TextBox>
                                    <TextBlock Grid.Row="9" TextWrapping="Wrap" Text="勘查意见：" TextAlignment="Right" Grid.Column="1" Margin="0" VerticalAlignment="Center"/>
                                    <TextBlock Margin="0" Grid.Row="10" TextWrapping="Wrap" TextAlignment="Right" Text="设计意见：" Grid.Column="1" VerticalAlignment="Center"/>
                                    <TextBox Text="{m:Bind Path=f_gcbkcopinion}" IsReadOnly="True" Grid.Column="2" Margin="1,0,0,0" Grid.Row="9" TextWrapping="Wrap" Height="Auto" Grid.ColumnSpan="2" Width="450" HorizontalAlignment="Left" Grid.RowSpan="1" d:LayoutOverrides="GridBox">
                                        <a:Data.Prop>
                                            <o:PropertySetter PropertyName="f_gcbkcopinion"/>
                                        </a:Data.Prop>
                                    </TextBox>
                                    <TextBox Text="{m:Bind Path=f_sjexambz}" IsReadOnly="True" Grid.Column="2" Margin="0" Grid.Row="10" TextWrapping="Wrap" Height="Auto" Grid.ColumnSpan="2" Width="450" HorizontalAlignment="Left" VerticalAlignment="Stretch" d:LayoutOverrides="GridBox">
                                        <a:Data.Prop>
                                            <o:PropertySetter PropertyName="f_sjexambz"/>
                                        </a:Data.Prop>
                                    </TextBox>
                                    <TextBlock Margin="0,1" TextWrapping="Wrap" Text="设计人" TextAlignment="Right" Grid.Column="3" Grid.Row="4" Grid.ColumnSpan="1" Height="27"/>
                                    <TextBlock Margin="0,2,0,0" TextWrapping="Wrap" Text="放线人" TextAlignment="Right" Grid.Column="3" Grid.Row="3" Grid.ColumnSpan="1" Height="27"/>
                                    <TextBox Text="{m:Bind Path=f_designers}" Grid.Column="4" Margin="4,0,0,4" TextWrapping="Wrap" Grid.Row="4" IsReadOnly="True" Height="25" HorizontalAlignment="Left" Width="146" >
                                        <a:Data.Prop>
                                            <o:PropertySetter PropertyName="f_designers" />
                                        </a:Data.Prop>
                                    </TextBox>
                                    <TextBox Text="{m:Bind Path=f_survey}" Grid.Column="4" Margin="4,0,0,4" TextWrapping="Wrap" Grid.Row="3" IsReadOnly="True" Height="25" HorizontalAlignment="Left" Width="146" d:LayoutOverrides="HorizontalMargin" >
                                        <a:Data.Prop>
                                            <o:PropertySetter PropertyName="f_survey" />
                                        </a:Data.Prop>
                                    </TextBox>
                                    <TextBlock Margin="0,4,0,2"  Text="报建编号：" TextAlignment="Right" RenderTransformOrigin="0.393,2.625" />
                                    <TextBox Text="{m:Bind Path=f_code}" Grid.Column="1" Margin="0,0,208,4" TextWrapping="Wrap" IsReadOnly="True" Height="25" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="0" Grid.ColumnSpan="2">
                                        <a:Data.Prop>
                                            <o:PropertySetter PropertyName="f_code" />
                                        </a:Data.Prop>
                                    </TextBox>
                                    <TextBlock Margin="0,4,0,2" TextWrapping="Wrap" Text="报建日期：" TextAlignment="Right" RenderTransformOrigin="0.393,2.625" Grid.Column="2" HorizontalAlignment="Right" Width="67" />
                                    <sdk:DatePicker IsEnabled="False" SelectedDate="{m:Bind Path=f_date}" Margin="0,2" Width="Auto" Height="25" Grid.Row="0" Grid.Column="3" SelectedDateFormat="Short" >
                                        <a:Data.Prop>
                                            <o:PropertySetter PropertyName="f_date"
            									/>
                                        </a:Data.Prop>
                                    </sdk:DatePicker>
                                    <TextBlock TextWrapping="Wrap" Text="部门：" Margin="2,6,81,0" Grid.Row="13" TextAlignment="Right" Grid.ColumnSpan="2"/>
                                    <TextBox Text="{m:Bind Path=f_htsigndepa}" Margin="2,2,206,2" TextWrapping="Wrap" Width="Auto" Height="25" Grid.Column="1" Grid.Row="13" IsReadOnly="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.ColumnSpan="2">
                                        <a:Data.Prop>
                                            <o:PropertySetter PropertyName="f_htsigndepa" 
				                			Default="{m:Exp Str=LoginUser.f_parentname}"/>
                                        </a:Data.Prop>
                                    </TextBox>
                                    <TextBlock TextWrapping="Wrap" Text="报建备注：" TextAlignment="Right" RenderTransformOrigin="0.393,2.625" Grid.Row="11" Margin="0,15,0,19" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
                                    <TextBox Text="{m:Bind Path=f_baojbeizhu}" IsReadOnly="True" Grid.Column="2" Margin="0,0,0,4" Grid.Row="11" TextWrapping="Wrap" Grid.ColumnSpan="2" Height="Auto" HorizontalAlignment="Left" Width="450" >
                                        <a:Data.Prop>
                                            <o:PropertySetter PropertyName="f_baojbeizhu" />
                                        </a:Data.Prop>
                                    </TextBox>
                                    <TextBlock TextWrapping="Wrap" Text="操作人：" Margin="0,6,183,0" Grid.Column="2" Grid.Row="13" TextAlignment="Right" HorizontalAlignment="Right" Width="67" Grid.ColumnSpan="2"/>
                                    <TextBox Text="{m:Bind Path=f_htsignoper}" Margin="2,2,362,2" TextWrapping="Wrap" Width="Auto" Height="25" Grid.Column="3" Grid.Row="13" IsReadOnly="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.ColumnSpan="2">
                                        <a:Data.Prop>
                                            <o:PropertySetter PropertyName="f_htsignoper" 
				                			Default="{m:Exp Str=LoginUser.name}"/>
                                        </a:Data.Prop>
                                    </TextBox>
                                    <TextBlock TextWrapping="Wrap" Text="日期：" Margin="61,6,0,0" Grid.Row="13" Grid.Column="4" TextAlignment="Right" HorizontalAlignment="Left"/>
                                    <sdk:DatePicker SelectedDate="{m:Bind Path=f_htsigndate}" Margin="98,2,77,2" IsEnabled="False" SelectedDateFormat="Short" Width="Auto" Height="25" Grid.Column="4" HorizontalAlignment="Stretch" Grid.Row="13" VerticalAlignment="Stretch" RenderTransformOrigin="0.258,0.48" >
                                        <a:Data.Prop>
                                            <o:PropertySetter PropertyName="f_htsigndate"
				                			Default="{m:Exp Str=SysTime.Today}"/>
                                        </a:Data.Prop>
                                    </sdk:DatePicker>
                                    <TextBlock Margin="39,4,0,2" TextWrapping="Wrap" Text="申请单位：" TextAlignment="Right" RenderTransformOrigin="0.393,2.625" Grid.Column="4" HorizontalAlignment="Left"/>
                                    <TextBox Text="{m:Bind Path=f_minyongdept}" Grid.Column="4" Margin="97,0,75,4" TextWrapping="Wrap" Grid.Row="0" IsReadOnly="True" Height="25" Grid.ColumnSpan="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="Auto">
                                        <a:Data.Prop>
                                            <o:PropertySetter PropertyName="f_minyongdept" />
                                        </a:Data.Prop>
                                    </TextBox>
                                    <TextBlock Margin="0,4,0,2" TextWrapping="Wrap" Text="片区：" TextAlignment="Right" RenderTransformOrigin="0.393,2.625" Grid.Row="1"/>
                                    <TextBlock Margin="39,4,0,2" TextWrapping="Wrap" Text="用户类型：" TextAlignment="Right" RenderTransformOrigin="0.393,2.625" Grid.Column="4" Grid.Row="1" HorizontalAlignment="Left"/>
                                    <TextBox Text="{m:Bind Path=f_area}" Grid.Column="1" Margin="0,0,208,4" TextWrapping="Wrap" Grid.Row="1" IsReadOnly="True" Height="25" VerticalAlignment="Stretch" Grid.ColumnSpan="2" Grid.RowSpan="1">
                                        <a:Data.Prop>
