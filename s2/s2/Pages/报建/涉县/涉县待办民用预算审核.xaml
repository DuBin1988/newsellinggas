                                        <o:PropertySetter PropertyName="f_gasprice"  Value="{m:Exp Str=pricetype1.SelectedItem.f_gasprice}" Default="1.55" />
                                    </a:Data.Prop>
                                </TextBox>
                                <TextBlock Margin="0" TextWrapping="Wrap" Text="预算备注：" TextAlignment="Right" RenderTransformOrigin="0.393,2.625" Grid.Row="10" VerticalAlignment="Center"/>
                                <TextBox Text="{m:Bind Path=f_ysbz}" IsReadOnly="True" Grid.Column="1" Margin="0,2" Grid.Row="10" TextWrapping="Wrap" Grid.ColumnSpan="3" Height="Auto" HorizontalAlignment="Stretch" Width="Auto" d:LayoutOverrides="GridBox" >
                                    <a:Data.Prop>
                                        <o:PropertySetter PropertyName="f_ysbz" />
                                    </a:Data.Prop>
                                </TextBox>
                                <TextBlock Margin="0,10,0,0" TextWrapping="Wrap" Text="经理审核：" TextAlignment="Right" RenderTransformOrigin="0.393,2.625" Grid.Row="12" VerticalAlignment="Center" Height="20"/>
                                <TextBox Text="{m:Bind Path=f_managerexaminat}" IsReadOnly="True" Grid.Column="1" Margin="0" Grid.Row="12" TextWrapping="Wrap" Grid.ColumnSpan="3" Height="Auto" HorizontalAlignment="Stretch" Width="Auto" Grid.RowSpan="1" >
                                    <a:Data.Prop>
                                        <o:PropertySetter PropertyName="f_managerexaminat" />
                                    </a:Data.Prop>
                                </TextBox>
                                 <TextBlock Margin="-5,10,0,19" TextWrapping="Wrap" Text="分管领导审核：" TextAlignment="Right" RenderTransformOrigin="0.393,2.625" Grid.Row="13" VerticalAlignment="Center" Height="21"/>
                                <TextBox Text="{m:Bind Path=f_chargeleadership}" IsReadOnly="True" Grid.Column="1" Margin="0,0,0,19" Grid.Row="13" TextWrapping="Wrap" Grid.ColumnSpan="3" Height="Auto" HorizontalAlignment="Stretch" Width="Auto" Grid.RowSpan="1" >
                                    <a:Data.Prop>
                                        <o:PropertySetter PropertyName="f_chargeleadership" />
                                    </a:Data.Prop>
                                </TextBox>
                                
                                <TextBlock Margin="0,9,5,3" Grid.Row="7" TextWrapping="Wrap" Text="工程款：" TextAlignment="Right"/>
                                <TextBox IsReadOnly="True" Text="{m:Bind Path=f_gckfee}" Grid.Column="1" Margin="0,5,0,3" Grid.Row="7" TextWrapping="Wrap" Height="Auto"  Width="Auto" HorizontalAlignment="Stretch" Grid.RowSpan="1">
