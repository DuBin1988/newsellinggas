                                    </a:Data.Prop>
                                </ComboBox>
                                <TextBlock Grid.Column="4" Margin="0,8,0,28" Grid.Row="4" TextWrapping="Wrap" Text="气价：" TextAlignment="Right" Grid.RowSpan="2"/>
