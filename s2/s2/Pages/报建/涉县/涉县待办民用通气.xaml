                        <Button Content="  通气完成  " Margin="5" IsEnabled="{m:Exp Str=!data.HasErrors}" 
                                        Click="{m:Exp Str=savesubmittip.Show()}" />
			    				
                        <c:MessageTipObj Name="savesubmittip" Tip="您确认要提交该报建信息吗？" 
						OK="{m:Exp Str=startprocess.id\=mytqList.SelectedItem.f_processid;mytqInfo.DataContext.f_isdownloads\=$否$;mytqInfo.DataContext.f_tqdjzt\=$已完成$;mytqInfo.DataContext.f_substate\=null;mytqInfo.DataContext.Save();mytqPopup.BringToDown();mytqPopup.IsOpen\=False;startprocess.Save()}" />
						<Button Name="mytqBack" Content="  返  回  " Click="{m:Exp Str=mytqPopup.BringToDown();mytqPopup.IsOpen\=False}" Margin="5" Width="60" />
                    </StackPanel>
                    <c:ImageView x:Name="PictureWindow" Visibility="Collapsed"></c:ImageView>
                </Grid>
            </c:BusyIndicatorEx>
