                                <TextBox Text="{m:Bind Path=f_materialopertor}" Grid.Column="3" Margin="0,2" Grid.Row="16" TextWrapping="Wrap" Height="Auto" IsReadOnly="True" VerticalAlignment="Stretch" Width="Auto">
