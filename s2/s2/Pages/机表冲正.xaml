<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:a="clr-namespace:Com.Aote.Attachs;assembly=s2DLL"
    xmlns:o="clr-namespace:Com.Aote.ObjectTools;assembly=s2DLL"
    xmlns:b="clr-namespace:Com.Aote.Behaviors;assembly=s2DLL"
	xmlns:c="clr-namespace:Com.Aote.Controls;assembly=s2DLL"
    xmlns:m="clr-namespace:Com.Aote.Marks;assembly=s2DLL"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
    xmlns:data="clr-namespace:System.Windows.Data;assembly=System.Windows"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
	xmlns:System="clr-namespace:System;assembly=mscorlib"
	mc:Ignorable="d" FontSize="13"
	x:Class="Com.Aote.Pages.机表冲正" d:DesignWidth="1024" d:DesignHeight="768">

	<Grid x:Name="LayoutRoot">
		<m:ResourceLoad Margin="0">
		   	<!--售气收费对象-->
        	<o:GeneralObject Name="sellinggas" NotEmpty="True" LoadOnPathChanged="False" EntityType="t_sellinggas" WebClientInfo="{StaticResource dbclient}"
			 	Path="{m:Exp Str=kbfee1.DataContext.f_cardid!\=null:$one/from t_sellinggas where id\=
				 (select max(id) from t_sellinggas where f_cardid\=\'\{userfilego.f_cardid\}\' and f_payfeevalid\=\'有效\')$\,kbfee1.DataContext.f_userid!\=null:$one/from t_sellinggas where id\=
				  (select max(id) from t_sellinggas where f_userid\=\'\{userfilego.f_userid\}\' and f_payfeevalid\=\'有效\')$\,$aaa$}"
             	IsOld="{m:Exp Str=userfilego.f_userid!\=null}"
				IsInit="{m:Exp Str=sellinggas.State\=\=$LoadError$ |or| userfilego.f_userid\=\=null}">  
        		<!--门牌号 -->
				<o:PropertySetter PropertyName="f_apartment" Value="{m:Exp Str=sellinggas.f_apartment}"/>
				<!--计算出的维护费交费年数-->
				<o:PropertySetter PropertyName="f_weihunians"    Value="{m:Exp Str=sellinggas.f_weihunians}"/>
				<!--计算出的维护费交费月数小计-->
				<o:PropertySetter PropertyName="f_weihuheji"   Value="{m:Exp Str=sellinggas.f_weihunians}"/>
				<!--交维护费后，日期计算后用于回写-->
				<o:PropertySetter PropertyName="f_beginfeehx"  Value="{m:Exp Str=sellinggas.f_beginfeehx}"/>
				<!--分公司编号-->
				<o:PropertySetter PropertyName="f_fengongsinum" NotNull="True"
										Default="{m:Exp Str=LoginUser.f_fengongsinum}"/>
				<!--表　　号-->						
				<o:PropertySetter PropertyName="f_meternumber" Value="{m:Exp Str=sellinggas.f_meternumber}"/>		
					
				<!--结账状态-->
				<o:PropertySetter PropertyName="f_jiezhangstate" 
										Default="未结账"/>		
				<!--收费类型-->						
				<o:PropertySetter PropertyName="f_payfeetype" 
										Default="机表收费"/>	
				<!--维修费起始月份,进行比较计算中间使用-->
				<o:PropertySetter PropertyName="f_beginfeebj"  Value="{m:Exp Str=sellinggas.f_beginfeebj}"/>	
				<!--交维护费后，日期计算后用于回写-->
				<o:PropertySetter PropertyName="f_beginfeehx"  Value="{m:Exp Str=sellinggas.f_beginfeehx}"/>																	
			</o:GeneralObject>
		   	<!--冲正对象-->
			<o:GeneralObject Name="userfilego" NotEmpty="True" EntityType="t_chongzheng" WebClientInfo="{StaticResource dbclient}" 
				IsInit="{m:Exp Str=SaveAction.State\=\=$End$ |or| nouser\=>OK!\=null |or| cancle\=>Click!\=null}">
				<o:PropertySetter PropertyName="chongzhengtype" Default="{m:Exp Str=$机表冲正$}" />
				<!--冲正时间-->
				
				<o:PropertySetter PropertyName="f_reversaltime" Value="{m:Exp Str=SecRefresh\=&gt;TimeEvent!\=null:SysTime.Now\,$$}"/>
			
				<!--计算出的维护费交费月数-->
				<o:PropertySetter PropertyName="f_weihuyue"   Value="{m:Exp Str=sellinggas.f_weihuyue}"/>
				
				
				<!--海力表型编码-->					
				<o:PropertySetter PropertyName="f_watchnum" Value="{m:Exp Str=sellinggas.f_watchnum}"/>
				<!--脉冲(表系数)-->
				<o:PropertySetter PropertyName="f_maichong" Value="{m:Exp Str=sellinggas.f_maichong}"/>	
				<!--身份证号-->
				<o:PropertySetter PropertyName="f_idnumber" Value="{m:Exp Str=sellinggas.f_idnumber}"/>	
					
				<!--本次总累计购气量-->
				<o:PropertySetter PropertyName="f_cumulativepurchase" 
										Value="{m:Exp Str=sellinggas.f_cumulativepurchase\=&gt;Completed}" />	
				<!--表本次累计购气量-->						
				<o:PropertySetter PropertyName="f_metergasnums" 
										Value="{m:Exp Str=sellinggas.f_metergasnums\=&gt;Completed}" />		
			
				
				<!--最后购气量_冲正时用-->						
				<o:PropertySetter PropertyName="f_finallybought" Value="{m:Exp Str=sellinggas.f_finallybought}"  />	
				<!--最后购气日期_冲正时用-->
				<o:PropertySetter PropertyName="f_finabuygasdate" Value="{m:Exp Str=sellinggas.f_finabuygasdate}"  />		
				
				
				<!-- 冲正人-->
				<o:PropertySetter PropertyName="f_reversalname"  
										Default="{m:Exp Str=LoginUser.name}"/>														
			</o:GeneralObject>
			
			<!--发票对象-->
			<o:GeneralObject Name="fapiao" EntityType="t_fapiaoinfos" WebClientInfo="{StaticResource dbclient}" 
			IsInit="{m:Exp Str=SaveAction.State\=\=$End$}" 
			Path="{m:Exp Str=sellinggas.f_invoicenum !\= null:$one/from t_fapiaoinfos where f_userid \=\'\{sellinggas.f_userid\}\' and f_invoicenum \=\'\{sellinggas.f_invoicenum\}\'$\,$null$}">
		    </o:GeneralObject>
			<!--用户对象
			<o:GeneralObject Name="user" WebClientInfo="{StaticResource dbclient}" 
					EntityType="t_userfiles"	
					IsInit="{m:Exp Str=SaveAction.State\=\=$End}">
				
			</o:GeneralObject>-->
				<!--表对象
			<o:GeneralObject Name="handplan" WebClientInfo="{StaticResource dbclient}" 
					EntityType="t_handplan"	
					IsInit="{m:Exp Str=SaveAction.State\=\=$End}">
				
			</o:GeneralObject>-->
			<!--更新用户对象-->
			<b:HQLAction Name="UpdateUser" WebClientInfo="{StaticResource dbclient}" 
				HQL="{m:Exp Str=$update t_userfiles 
				set
				f_metergasnums \= \{userfile.DataContext.f_premetergasnums\}\, 
				f_cumulativepurchase\=\{userfile.DataContext.f_upbuynum\}\, 
				
				f_zhye \= \{userfile.DataContext.f_zhye\} 
				where f_userid \= \'\{sellinggas.f_userid\}\' }"/>
			<!--更新售气记录为无效-->
			<b:HQLAction Name="UpdateSellgas"   WebClientInfo="{StaticResource dbclient}" 
				HQL="{m:Exp Str=$update t_sellinggas set f_payfeevalid\=\'无效\'   where id \= \{sellinggas.id\}}"/> 
				
			<!--更新发票记录为作废
			<b:HQLAction Name="Updatefapiao"   WebClientInfo="{StaticResource dbclient}" 
				HQL="{m:Exp Str=$update t_fapiaoinfos set f_fapiaostatue\=\'作废\'  where  id \= \{fapiao.id\}}"/> 	-->	    
			<!--更新抄表记录未交-->
			<b:HQLAction Name="UpdateHandplan"   WebClientInfo="{StaticResource dbclient}" 
				HQL="{m:Exp Str=$update t_handplan set shifoujiaofei\=\'否\' where id in (\{userfile.DataContext.f_useful\})}"/>  
								
								
								
		    <!--清欠对象-->
		<o:GeneralObject Name="financeobj" NotEmpty="True" LoadOnPathChanged="False" WebClientInfo="{StaticResource dbclient}" EntityType="t_financedetail"
		 	Path="{m:Exp Str=$one/from t_financedetail where  id \= (select min(id) from t_financedetail where f_payfeevalid\=\'有效\'  and f_payfeetype\=\'交费\' and f_sellid\=\{sellinggas.id\})$}"
			IsOld="{m:Exp Str=sellinggas.State\=\=$Loaded$}"
			IsInit="{m:Exp Str=financeobj.State\=\=$LoadError$ |or| sellinggas.State\=\=$LoadError$}">
			<o:PropertySetter PropertyName="f_payfeevalid" NoDependValue="{m:Exp Str=SaveAction\=>Saving!\=null:$无效$\,null}"/>
		</o:GeneralObject>

		<!--根据清欠对象更新档案账户余额-->
		<b:HQLAction Name="updateUserAccount"   WebClientInfo="{StaticResource dbclient}" 
			HQL="{m:Exp Str=$update t_userfiles set f_accountzhye\= \{financeobj.f_prevaccountzhye\}  where f_userid \= \'\{financeobj.f_userid\}\' }"/> 
	    <!--更新清欠数据未无效-->
		<b:HQLAction Name="updatefinancedatas"   WebClientInfo="{StaticResource dbclient}" 
			HQL="{m:Exp Str=$update t_financedetail set f_payfeevalid\= \'无效\'   where f_sellid \= \{sellinggas.id\} }"/> 
	   
											
			<!--保存对象 -->
			<b:BatchExcuteAction Name="SaveAction"  WebClientInfo="{StaticResource dbclient}">
				<!--更新售气记录无效-->
				<b:BatchInfo Source="{m:Exp Str=UpdateSellgas}" MethodName="InvokeToJson"/> 
				
		  		<!--更新抄表记录未交-->
				<b:BatchInfo Source="{m:Exp Str=UpdateHandplan}" CanSave="{m:Exp Str=userfile.DataContext.f_useful!\=null and userfile.DataContext.f_useful!\=$$}" MethodName="InvokeToJson"/> 
		   		<!--保存冲正记录-->
				<b:BatchInfo Source="{m:Exp Str=userfilego}" MethodName="SaveToJson"/>
				
		  		<!--更新发票作废 CanSave="{m:Exp Str=userfilego.f_invoicenum !\=null}"
				<b:BatchInfo Source="{m:Exp Str=Updatefapiao}" MethodName="InvokeToJson" />-->
				<!--更新用户记录-->
				<b:BatchInfo Source="{m:Exp Str=UpdateUser}" MethodName="InvokeToJson"/> 
				<!--更新档案实际余额-->
				<b:BatchInfo Source="{m:Exp Str=updateUserAccount}"   CanSave="{m:Exp Str=financeobj.id!\=null}"  MethodName="InvokeToJson"/>
				<!--清欠数据无效-->
				<b:BatchInfo Source="{m:Exp Str=updatefinancedatas}"   CanSave="{m:Exp Str=financeobj.id!\=null}" MethodName="InvokeToJson"/>
		
			</b:BatchExcuteAction>
			
			<!--用户列表部分-->
			<o:SearchObject Name="search"/>
			<o:PagedObjectList Name="userfileslist" WebClientInfo="{StaticResource dbclient}"
		       	Path="{m:Exp Str='$from t_userfiles where {search.Condition}'}"
		       	PageIndex="{m:Exp Str=pager.PageIndex}" PageSize="{m:Exp Str=pager.PageSize}" SumNames=","/>
		</m:ResourceLoad>
		<Grid >
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="0.400*"/>
				<ColumnDefinition Width="0.600*"/>
			</Grid.ColumnDefinitions>
			<c:BusyIndicatorEx BusyContent="正在查询，请稍等..." IsBusy="{m:Exp Str=userfileslist.IsBusy}">
				<toolkit:DockPanel HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Stretch" Margin="0">
					<toolkit:DockPanel  x:Name="userfilesearch" DataContext="{m:Exp Str=search}" toolkit:DockPanel.Dock="Top" Margin="0,0,0,0" Background="#FFCFEFFF" Width="Auto"  >
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="28"/>
								<RowDefinition Height="28"/>
								<RowDefinition Height="28"/>
								<RowDefinition Height="28"/>
							</Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="50*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="50*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock TextWrapping="Wrap" Text="用户姓名：" Margin="5,4,0,4" Height="25" FontSize="13.333" HorizontalAlignment="Right" Grid.Column="2" />
							<TextBox TextWrapping="Wrap" Grid.Row="0" Grid.Column="3" Text="{m:Bind Path=f_username}" Width="Auto" Margin="0,2,0,1" Height="25" FontSize="13.333" HorizontalAlignment="Stretch" >
								<a:Data.Prop>
									<o:PropertySetter PropertyName="f_username"  Operator="f_username like 'this%'"/>          
								</a:Data.Prop>
							</TextBox>
							<Button Content="查  询" x:Name="searchbutton" Grid.Row="3" Grid.Column="3" Click="{m:Exp Str=search.Search()}"  FontSize="13.333" HorizontalAlignment="Left" Width="75" Margin="25,0,0,0"/>
							<TextBlock TextWrapping="Wrap" Text="用户编号：" Margin="0,4,0,0" Height="25" FontSize="13.333" HorizontalAlignment="Right" />
							<TextBox TextWrapping="Wrap" Grid.Column="1" Text="{m:Bind Path=f_userid}" Width="Auto" Margin="0,3,0,0" Height="25" FontSize="13.333" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
								<a:Data.Prop>
									<o:PropertySetter PropertyName="f_userid"  Operator="f_userid = 'this'"/>          
								</a:Data.Prop>
							</TextBox>
							<TextBlock TextWrapping="Wrap" Text="楼    号：" Margin="0" Height="25" FontSize="13.333" HorizontalAlignment="Right" Grid.Column="2" Grid.Row="1" />
							<TextBox TextWrapping="Wrap" Grid.Row="1" Grid.Column="3" Text="{m:Bind Path=f_cusDom}" Width="Auto" Margin="0,2,0,1" Height="25" FontSize="13.333" HorizontalAlignment="Stretch" >
								<a:Data.Prop>
									<o:PropertySetter PropertyName="f_cusDom"  Operator="f_cusDom = 'this'"/>          
								</a:Data.Prop>
							</TextBox>
							<TextBlock TextWrapping="Wrap" Text="小区名称：" Margin="0" Height="25" FontSize="13.333" HorizontalAlignment="Right" Grid.Row="1" />
							<TextBox TextWrapping="Wrap" Grid.Column="1" Text="{m:Bind Path=f_districtname}" Width="Auto" Margin="0,3,0,0" Height="25" FontSize="13.333" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="1" >
								<a:Data.Prop>
									<o:PropertySetter PropertyName="f_districtname"  Operator="f_districtname like 'this%'"/>          
								</a:Data.Prop>
							</TextBox>
							<TextBlock TextWrapping="Wrap" Text="门 牌 号：" Margin="0" Height="25" FontSize="13.333" HorizontalAlignment="Right" Grid.Column="2" Grid.Row="2" />
							<TextBox TextWrapping="Wrap" Grid.Row="2" Grid.Column="3" Text="{m:Bind Path=f_apartment}" Width="Auto" Margin="0,2,0,1" Height="25" FontSize="13.333" HorizontalAlignment="Stretch" >
								<a:Data.Prop>
									<o:PropertySetter PropertyName="f_apartment"  Operator="f_apartment = 'this'"/>          
								</a:Data.Prop>
							</TextBox>
							<TextBlock TextWrapping="Wrap" Text="单    元：" Margin="0" Height="25" FontSize="13.333" HorizontalAlignment="Right" Grid.Row="2" />
							<TextBox TextWrapping="Wrap" Grid.Column="1" Text="{m:Bind Path=f_cusDy}" Width="Auto" Margin="0,3,0,0" Height="25" FontSize="13.333" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="2" >
								<a:Data.Prop>
									<o:PropertySetter PropertyName="f_cusDy"  Operator="f_cusDy = 'this'"/>          
								</a:Data.Prop>
							</TextBox>
						</Grid>
					</toolkit:DockPanel>
					<sdk:DataPager x:Name="pager" Source="{Binding ItemsSource.Count, Converter={StaticResource DataPagerConverter}, ElementName=userfiles}" PageSize="15" Margin="0" toolkit:DockPanel.Dock="Bottom"/>
					<sdk:DataGrid x:Name="userfiles" Margin="0"  FontSize="13.333" ItemsSource="{m:Exp Str=userfileslist}"
  						SelectedItem="{m:Exp Str=userfileslist[data.f_userid\=\=userfilego.f_userid].First()}"
						AutoGenerateColumns="False" Width="Auto" Background="{x:Null}" IsReadOnly="True" >
						<sdk:DataGrid.Columns>
							<sdk:DataGridTextColumn d:IsLocked="True" Header="序  号" Binding="{Binding Index}"/>
							<sdk:DataGridTextColumn Header="用户编号" Binding="{Binding f_userid}"/>
							<sdk:DataGridTextColumn d:IsLocked="True" Header="用户姓名" Binding="{Binding f_username}"/>
							<sdk:DataGridTextColumn Header="用户类型" Binding="{Binding f_usertype}"/>
							<sdk:DataGridTextColumn Header="气表底数" Binding="{Binding f_gasmeteraccomodations}"/>
							<sdk:DataGridTextColumn Header="卡号" Binding="{Binding f_cardid}"/>
							<sdk:DataGridTextColumn Header="表号" Binding="{Binding f_meternumber}"/>
							<sdk:DataGridTextColumn Header="气表品牌" Binding="{Binding f_gaswatchbrand}"/>
							<sdk:DataGridTextColumn Header="气表型号" Binding="{Binding f_metertype}"/>
							<sdk:DataGridTextColumn Header="额定流量" Binding="{Binding f_flownum}"/>
							<sdk:DataGridTextColumn Header="特殊限购" Binding="{Binding f_xiangou}"/>
							<sdk:DataGridTextColumn Header="地址" Binding="{Binding f_address}"/>
							<sdk:DataGridTextColumn Header="小区名称" Binding="{Binding f_districtname}"/>
							<sdk:DataGridTextColumn Header="门牌号" Binding="{Binding f_apartment}"/>
							<sdk:DataGridTextColumn Header="电  话" Binding="{Binding f_phone}"/>
							<sdk:DataGridTextColumn Header="用气性质" Binding="{Binding f_gasproperties}"/>
							<sdk:DataGridTextColumn Header="气价类型" Binding="{Binding f_gaspricetype}"/>
							<sdk:DataGridTextColumn Header="气价" Binding="{Binding f_gasprice}"/>
							<sdk:DataGridTextColumn Header="有壁挂炉" Binding="{Binding f_wallhangboiler}"/>
							<sdk:DataGridTextColumn Header="账户余额" Binding="{Binding f_zhye}"/>
							<sdk:DataGridTextColumn Header="总购气量" Binding="{Binding f_cumulativepurchase}"/>
							<sdk:DataGridTextColumn Header="当前表购气量" Binding="{Binding f_metergasnums}"/>
							<sdk:DataGridTextColumn Header="本次剩余补气量" Binding="{Binding f_thisnextaddgasamount}"/>
							<sdk:DataGridTextColumn Header="维护费日期" Binding="{Binding f_beginfee, StringFormat=yyyy-MM}"/>
							<sdk:DataGridTextColumn Header="发卡日期" Binding="{Binding f_givecarddate, StringFormat=yyyy-MM-dd}"/>
							<sdk:DataGridTextColumn Header="是否发卡" Binding="{Binding f_whethergivecard}"/>
							<sdk:DataGridTextColumn Header="用户状态" Binding="{Binding f_userstate}"/>
							<sdk:DataGridTextColumn Header="最后购气量" Binding="{Binding f_finallybought}"/>
							<sdk:DataGridTextColumn Header="最后购气日期" Binding="{Binding f_finabuygasdate, StringFormat=yyyy-MM-dd}"/>
							<sdk:DataGridTextColumn Header="表安装日期" Binding="{Binding f_watchinstalldate, StringFormat=yyyy-MM-dd}"/>
							<sdk:DataGridTextColumn Header="所属公司" Binding="{Binding f_filiale}"/>
							<sdk:DataGridTextColumn Header="网点" Binding="{Binding f_yytdepa}"/>
							<sdk:DataGridTextColumn Header="建档人" Binding="{Binding f_yytoper}"/>
							<sdk:DataGridTextColumn Header="建档日期" Binding="{Binding f_yytdate, StringFormat=yyyy-MM-dd}"/>
							<sdk:DataGridTextColumn Header="时间" Binding="{Binding f_yyttime, StringFormat=hh:mm:ss tt}"/>
						</sdk:DataGrid.Columns>
					</sdk:DataGrid>
				</toolkit:DockPanel></c:BusyIndicatorEx>
			<c:BusyIndicatorEx BusyContent="正在工作，请稍等" IsBusy="{m:Exp Str=sellinggas.IsBusy or SaveAction.IsBusy}" Margin="5,0,0,0" BorderThickness="0" BorderBrush="{x:Null}" Background="{x:Null}" Grid.Column="1" >
				<Grid  x:Name="userfile" DataContext="{m:Exp Str=userfilego}">
					
					<!--按钮-->
					<!--非民用主操作区-->
					<toolkit:DockPanel >
						<toolkit:DockPanel toolkit:DockPanel.Dock="Bottom"  Background="#FFC3E4FD">
							<StackPanel Orientation="Horizontal">
								<Button x:Name="save" Content="冲    正" Margin="5" 
									IsEnabled="{m:Exp Str=!userfilego.HasErrors }" 
									Click="{m:Exp Str=SaveAction.Invoke()}" Width="50" />
								<Button Name="cancle" Content="撤  销" Margin="5" FontSize="12" Click="{m:Exp Str=sellinggas.New()}" Width="50"/>
							</StackPanel>
							<StackPanel Orientation="Horizontal" HorizontalAlignment="Right"/>
							 
						</toolkit:DockPanel>
						<Grid   Margin="0" x:Name="kbfee1"   >
							<Grid.Background>
								<LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
									<GradientStop Color="#FFF2F8FF" Offset="0"/>
									<GradientStop Color="#FFDDF2FD" Offset="1"/>
								</LinearGradientBrush>
							</Grid.Background>
							<Grid.RowDefinitions>
								<RowDefinition Height="37"/>
								<RowDefinition Height="37"/>
								<RowDefinition Height="37"/>
								<RowDefinition Height="37"/>
								<RowDefinition Height="1"/>
								<RowDefinition Height="37"/>
								<RowDefinition Height="37"/>
								<RowDefinition Height="37"/>
								<RowDefinition Height="1"/>
								<RowDefinition Height="30"/>
								<RowDefinition Height="37"/>
								<RowDefinition Height="37"/>
								<RowDefinition Height="1"/>
								<RowDefinition Height="37"/>
								<RowDefinition Height="36"/>
								<RowDefinition Height="40"/>
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="130"/>
								<ColumnDefinition Width="1*"/>
								<ColumnDefinition Width="130"/>
								<ColumnDefinition Width="1*"/>
								<ColumnDefinition Width="130"/>
								<ColumnDefinition Width="1*"/>
							</Grid.ColumnDefinitions>
							<TextBlock Text="卡      号：" Margin="0,6" TextWrapping="Wrap"  TextAlignment="Right" Height="25" Grid.Column="2"/>
							<TextBlock Text="用户/单位名称：" Margin="0,6" TextWrapping="Wrap"  TextAlignment="Right" Height="25" Grid.Row="1"/>
							<TextBlock Text="地　　址：" Margin="0,6" Grid.Row="2" TextWrapping="Wrap" TextAlignment="Right" Height="25" Grid.Column="2" RenderTransformOrigin="1.638,0.44"/>
							<TextBlock Text="小区名称：" Margin="0,6" Grid.Row="2" TextWrapping="Wrap" TextAlignment="Right" Height="25"/>
							<TextBlock Text="气表品牌：" Margin="0,6" Grid.Row="3" TextWrapping="Wrap" TextAlignment="Right" Height="25"/>
							<TextBlock Text="气表型号：" Margin="0,6" Grid.Row="3" TextWrapping="Wrap" TextAlignment="Right" Grid.Column="2" Height="25"/>
							<TextBlock Margin="0,6" Grid.Row="5" TextWrapping="Wrap" Text="气价类型：" TextAlignment="Right" Grid.Column="2" Height="25"/>
							<TextBlock Text="气　　价：" Grid.Column="4"  TextWrapping="Wrap" TextAlignment="Right" Grid.Row="5" Margin="0,6" Height="25"/>
							<TextBlock Text="上次总累计购气量："  TextWrapping="Wrap" TextAlignment="Right" Grid.Row="6" Margin="0,6" Height="25"/>
							<TextBlock Text="用户类型：" Margin="1,6,-1,6" Grid.Row="1" TextWrapping="Wrap" TextAlignment="Right" Height="25" Grid.Column="2"/>
