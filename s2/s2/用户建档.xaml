<UserControl x:Class="s2.用户建档"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:a="clr-namespace:Com.Aote.Attachs;assembly=s2DLL" 
    xmlns:b="clr-namespace:Com.Aote.Behaviors;assembly=s2DLL"
    xmlns:o="clr-namespace:Com.Aote.ObjectTools;assembly=s2DLL"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:m="clr-namespace:Com.Aote.Marks;assembly=s2DLL"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
    xmlns:c="clr-namespace:Com.Aote.Controls;assembly=s2DLL"
    mc:Ignorable="d"
    FontSize="13" >
    <Grid x:Name="LayoutRoot" Background="White">
        <m:ResourceLoad >
            <!--抄表员列表-->
            <o:ObjectList Name="inputtorlist" EntityType="t_inputtor" WebClientInfo="{StaticResource dbclient}"  Path="from t_inputtor"  HasEmptyRow="False"/>

            <!--小区列表-->
            <o:PagedObjectList Name="areafileslist1"  WebClientInfo="{StaticResource dbclient}"
				Path="{m:Exp Str=$from t_area where \{areafilesearch1.DataContext.Condition\} and f_branch\=\'\{LoginUser.f_fengongsi\}\'}"
				 
				SumNames="," PageSize="{m:Exp Str=pager.PageSize}" PageIndex="{m:Exp Str=pager.PageIndex}"  />
            <!--用户对象-->
            <o:GeneralObject Name="userfilego" WebClientInfo="{StaticResource dbclient}" 
					EntityType="t_userinfo" />

            <o:GeneralObject Name="temp" EntityType="" Source="{m:Exp Str=TabControl.SelectedIndex\=\=0:areafiles.SelectedItem\,areafiles2.SelectedItem}"/>
            <!--证件-->
            <o:ObjectList Name="zhengjianlist" WebClientInfo="{StaticResource dbclient}" Path="from paramvalue where param.name='证件类型'"/>
            <o:ObjectList Name="stairl" WebClientInfo="{StaticResource dbclient}"
             	Path="{m:Exp Str=CoboxGasPro.SelectedValue!\=null:$from t_stairprice where f_gasproperties\=\'\{CoboxGasPro.SelectedValue\}\'$\,$null$}"/>
            <o:ObjectList Name="usegaslist" WebClientInfo="{StaticResource dbclient}" Path="{m:Exp Str=$from gasproper as gasproper left join fetch gasproper.pricetype where f_gasproperties\=\'民用\'}"/>
            <o:GeneralObject Name="biaojuNull"   />
            <o:ObjectList Name="biaoju"  />
        </m:ResourceLoad>
        <Grid  x:Name="LayoutRoot1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition Width="0.75*"/>
            </Grid.ColumnDefinitions>
            <c:BusyIndicatorEx BusyContent="正在查询，请稍等" IsBusy="{m:Exp Str=areafiles.ItemsSource.IsBusy}" >
                <sdk:TabControl Name="TabControl" BorderThickness="1" BorderBrush="#FF9AA2AB" Margin="0" Padding="2" Width="Auto" Height="Auto" >
                    <sdk:TabItem Header="民用户信息">
                        <toolkit:DockPanel Width="Auto" >
                            <toolkit:DockPanel   Background="{x:Null}" toolkit:DockPanel.Dock="Bottom" Margin="0,0,0,5" Height="22">
                                <TextBlock TextWrapping="Wrap" Text="{m:Exp Str=$共\{areafiles.ItemsSource.Count\}项}" Width="Auto" HorizontalAlignment="Right" Foreground="#FF140000" VerticalAlignment="Bottom" Margin="0,0,0,1"/>
                                <sdk:DataPager x:Name="pager" Source="{Binding ItemsSource.Count, Converter={StaticResource DataPagerConverter}, ElementName=areafiles}"  Margin="0,0,0,-2" PageSize="20"/>
                            </toolkit:DockPanel>
                            <toolkit:DockPanel  x:Name="areafilesearch1" toolkit:DockPanel.Dock="Top"  Margin="0,0,0,5" Background="#FFEAF8FF"  >
                                <a:Data.Context>
                                    <o:SearchObject />
                                </a:Data.Context>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="50*"/>
                                        <ColumnDefinition Width="50*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="28"/>
                                        <RowDefinition Height="28"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock TextWrapping="Wrap" Text="小区名称：" TextAlignment="Right"  Margin="5,4,0,4" />
                                    <TextBox TextWrapping="Wrap" Grid.Column="1" Text="{m:Bind Path=f_districtname}" Width="Auto" Margin="0" Height="25" >
                                        <a:Data.Prop>
                                            <o:PropertySetter PropertyName="f_districtname"  Operator="f_districtname like '%this%'"/>
                                        </a:Data.Prop>
                                    </TextBox>
                                    <TextBlock TextWrapping="Wrap" Grid.Row="1" Text="小区地址："  TextAlignment="Right" Margin="5,4,0,4" />
                                    <TextBox TextWrapping="Wrap" Grid.Row="1" Grid.Column="1" Text="{m:Bind Path=f_address}" Width="Auto" Margin="0" Height="25" >
                                        <a:Data.Prop>
                                            <o:PropertySetter PropertyName="f_address"  Operator="f_address like '%this%'"/>
                                        </a:Data.Prop>
                                    </TextBox>
                                    <Button Content="查  询" x:Name="areasearchbutton" Grid.Column="2" Grid.Row="1" Click="{m:Exp Str=areafilesearch1.DataContext.Search()}" Margin="0,0,3,4" HorizontalAlignment="Right" Width="50" VerticalAlignment="Bottom"/>
                                </Grid>
                            </toolkit:DockPanel>
                            <sdk:DataGrid x:Name="areafiles" Margin="0" ItemsSource="{m:Exp Str=areafileslist1}"
							AutoGenerateColumns="False" Width="Auto" Background="{x:Null}" IsReadOnly="True">
                                <sdk:DataGrid.Columns>
                                    <sdk:DataGridTextColumn d:IsLocked="True" Header="序号" Binding="{Binding Index}"  />
                                    <sdk:DataGridTextColumn Header="小区名称" Binding="{Binding f_districtname}"    />
                                    <sdk:DataGridTextColumn Header="小区地址" Binding="{Binding f_address}"/>
                                    <sdk:DataGridTextColumn Header="街  道" Binding="{Binding f_road}"/>
                                </sdk:DataGrid.Columns>
                            </sdk:DataGrid>
                        </toolkit:DockPanel>
                    </sdk:TabItem>
                </sdk:TabControl>
            </c:BusyIndicatorEx>
            <c:BusyIndicatorEx x:Name="ui_userfile" BusyContent="正在工作，请稍等"  Margin="5,0,0,0" Grid.Column="1" >
                <toolkit:DockPanel>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Width="Auto">
                        <Grid x:Name="userfile" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.45*"/>
                                <RowDefinition Height="0.45*"/>
                                <RowDefinition Height="0.10*"/>
                            </Grid.RowDefinitions>
                            <c:BusyIndicatorEx  >
                                <sdk:TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                    <sdk:TabItem Header="用户信息">
                                        <Grid Margin="0" HorizontalAlignment="Stretch">
                                            <Grid.Background>
                                                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                                                    <GradientStop Color="#FFF2F8FF" Offset="0"/>
                                                    <GradientStop Color="#FFDDF2FD" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Grid.Background>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="30"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="140"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="区      域：" Margin="0,3,0,2" Grid.Row="0" Grid.Column="0"  TextWrapping="Wrap" TextAlignment="Right" Height="25"/>
                                            <TextBox  Grid.Column="1" Margin="0,3,0,2" Grid.Row="0"  Grid.ColumnSpan="3"  TextWrapping="Wrap" Height="25" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="Auto" >
                                                <a:Data.Prop>
                                                    <o:PropertySetter PropertyName="f_area" Value="{m:Exp Str=areafiles.SelectedItem.f_area}"  Default="{m:Exp Str=userfilego.f_area}"/>
                                                </a:Data.Prop>
                                            </TextBox>
                                            <TextBlock Text="小区名称：" Margin="0,3,0,2" Grid.Row="0" TextWrapping="Wrap" TextAlignment="Right" Height="25" Grid.Column="4"/>
                                            <TextBox Text="{m:Bind Path=f_districtname}" x:Name="f_districtname"  Grid.Column="5" Margin="0,2,0,3" Grid.Row="0"  Grid.ColumnSpan="3"  TextWrapping="Wrap" Height="25" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="Auto" Grid.RowSpan="1" IsReadOnly="True" >
                                                <a:Data.Prop>
                                                    <o:PropertySetter PropertyName="f_districtname" NotNull="True" Value="{m:Exp Str=temp.f_districtname}"  Default="{m:Exp Str=userfilego.f_districtname}"/>
                                                </a:Data.Prop>
                                            </TextBox>
                                            <TextBlock Text="证件类型：" Margin="0,3,0,2" Grid.Row="0" TextWrapping="Wrap" TextAlignment="Right" Grid.Column="8" />
                                            <ComboBox x:Name="CoboxPinp_Copy3" ItemsSource="{m:Exp Str=zhengjianlist}" DisplayMemberPath="name" SelectedValuePath="name" SelectedValue="{m:Bind Path=f_credentials}" Grid.Column="9" Margin="0,3,0,2" Grid.Row="0" Height="25" IsEnabled="true" FontSize="13.333" RenderTransformOrigin="-5.111,4.2">
                                                <a:Data.Prop>
                                                    <o:PropertySetter PropertyName="f_credentials"  Default="{m:Exp Str=zhengjianlist.Count &gt; 0 :zhengjianlist.First().name\,null}"/>
                                                </a:Data.Prop>
                                            </ComboBox>
                                            <TextBlock Text="证件号码：" Margin="0,3,0,2" TextWrapping="Wrap" TextAlignment="Right" Grid.Row="1" Height="25" Grid.Column="8"/>
                                            <TextBox Text="{m:Bind Path=f_idnumber}"  Grid.Column="9" Margin="1,2,0,1" Grid.Row="1" TextWrapping="Wrap" Height="Auto" VerticalAlignment="Center" Grid.ColumnSpan="1" IsReadOnly="False" HorizontalAlignment="Stretch" Width="Auto"  Grid.RowSpan="1" >
                                                <a:Data.Prop>
                                                    <o:PropertySetter PropertyName="f_idnumber"  Value="{m:Exp Str=userfilego.f_idnumber\=>Completed}"/>
                                                </a:Data.Prop>
                                            </TextBox>
                                            <TextBlock Text="用户姓名：" Margin="0,3,1,2" Grid.Row="1" TextWrapping="Wrap" TextAlignment="Right" Height="25"/>
                                            <TextBox Text="{m:Bind Path=f_username}"  Grid.Column="1" Margin="0,0,0,2" Grid.Row="1" TextWrapping="Wrap"  Height="Auto" VerticalAlignment="Stretch" Grid.ColumnSpan="3" >
                                                <a:Data.Prop>
                                                    <o:PropertySetter PropertyName="f_username" NotNull="True" Value="{m:Exp Str=temp.f_username}"  />
                                                </a:Data.Prop>
                                            </TextBox>
                                            <TextBlock Foreground="Red" FontWeight="Black" FontSize="16" Grid.Column="4" Grid.Row="1" TextWrapping="Wrap" Text="客户编号：" TextAlignment="Right" Height="25" Margin="0,3,0,2"/>
                                            <TextBox Text="{m:Bind Path=f_userinfoid}"  Grid.Column="5" Margin="0,3,0,0" Grid.Row="1" TextWrapping="Wrap" Grid.ColumnSpan="3" Height="25" VerticalAlignment="Top" Grid.RowSpan="1" IsReadOnly="True"  >
                                                <a:Data.Prop>
                                                    <o:PropertySetter PropertyName="f_userinfoid" Value="{m:Exp Str=temp.f_userid}" NotNull="True"/>
                                                </a:Data.Prop>
                                            </TextBox>

                                            <TextBlock Text=" 楼      栋：" Margin="0,3,0,2" TextWrapping="Wrap" TextAlignment="Right"   Height="25" Grid.Row="2" Grid.Column="0" />
                                            <TextBox Text="{m:Bind Path=f_cusDom}" x:Name="f_cusDom" Grid.Column="1"  Grid.Row="2"  Margin="0,3,2,2"  Grid.ColumnSpan="3" TextWrapping="Wrap" Height="25" VerticalAlignment="Top" HorizontalAlignment="Stretch" Width="Auto">
                                                <a:Data.Prop>
                                                    <o:PropertySetter PropertyName="f_cusDom" Value="{m:Exp Str=temp.f_cusDom}" NotNull="True" />
                                                </a:Data.Prop>
                                            </TextBox>
                                            <TextBlock Text="单     元：" Margin="0,2,0,3" Grid.Row="2" TextWrapping="Wrap" TextAlignment="Right" Height="25" Grid.Column="4"/>
                                            <TextBox Text="{m:Bind Path=f_cusDy}" x:Name="f_cusDy" Grid.Column="5" Margin="0,3,0,2" Grid.Row="2" TextWrapping="Wrap" Grid.ColumnSpan="1" Height="25" VerticalAlignment="Stretch" Grid.RowSpan="1" >
                                                <a:Data.Prop>
                                                    <o:PropertySetter PropertyName="f_cusDy"  Value="{m:Exp Str=temp.f_cusDy}"  NotNull="True"/>
                                                </a:Data.Prop>
                                            </TextBox>
                                            <TextBlock Text="楼 层 ： " Margin="0,3,0,2" Grid.Row="2"  TextAlignment="Right" Height="25" Grid.Column="6"/>
                                            <TextBox Text="{m:Bind Path=f_cusFloor}" x:Name="f_cusFloor" Grid.Column="7" Margin="1,3,1,2" Grid.Row="2" TextWrapping="Wrap" Grid.ColumnSpan="1" Height="25" VerticalAlignment="Stretch" Grid.RowSpan="1" >
                                                <a:Data.Prop>
                                                    <o:PropertySetter PropertyName="f_cusFloor"  Value="{m:Exp Str=temp.f_cusFloor}"  NotNull="True"/>
                                                </a:Data.Prop>
                                            </TextBox>
                                            <TextBlock Text="门 牌 号：" TextWrapping="Wrap" TextAlignment="Right" Grid.Row="2" Height="25" Grid.Column="8"/>
                                            <TextBox Text="{m:Bind Path=f_apartment}" x:Name="f_apartment"  Grid.Column="9" Margin="0,3,0,2" Grid.Row="2" TextWrapping="Wrap"  Height="25" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="Auto" Grid.RowSpan="1" Grid.ColumnSpan="1"  >
                                                <a:Data.Prop>
                                                    <o:PropertySetter PropertyName="f_apartment" Value="{m:Exp Str=temp.f_apartment}"  NotNull="True"/>
                                                </a:Data.Prop>
                                            </TextBox>
                                            <TextBlock Text="用户地址：" Margin="0,3,0,2" TextWrapping="Wrap" TextAlignment="Right" Height="25" Grid.Row="3"/>
                                            <TextBox Text="{m:Bind Path=f_address}" x:Name="f_address" MouseEnter="f_address_MouseEnter"  Grid.Column="1" Margin="1,3,0,2" Grid.Row="3" TextWrapping="Wrap" Height="25" VerticalAlignment="Stretch" IsReadOnly="False" Grid.ColumnSpan="5" Grid.RowSpan="1" >
                                                <a:Data.Prop>
                                                    <o:PropertySetter PropertyName="f_address"/>
                                                </a:Data.Prop>
                                            </TextBox>
                                            <TextBlock Text="电        话：" Margin="0,4,0,1" Grid.Row="3" Grid.Column="8" TextWrapping="Wrap" TextAlignment="Right" Height="25" />
                                            <TextBox Text="{m:Bind Path=f_phone}"  Grid.Column="9" Margin="0,4,0,1" Grid.Row="3" TextWrapping="Wrap" Height="25" VerticalAlignment="Stretch" IsReadOnly="False" Grid.ColumnSpan="3" >
                                                <a:Data.Prop>
                                                    <o:PropertySetter PropertyName="f_phone" NotNull="True" Value="{m:Exp Str=userfilego.f_phone}"/>
                                                </a:Data.Prop>
                                            </TextBox>
                                            <TextBlock Grid.Column="8" Margin="0,6,0,5" TextWrapping="Wrap" Text="抄表员：" TextAlignment="Right" Grid.Row="4" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                            <ComboBox x:Name="CoboxInputtor" ItemsSource="{m:Exp Str=inputtorlist}" SelectedValuePath="f_inputtor" SelectedValue="{m:Bind Path=f_inputtor}" Grid.Column="9" Margin="0,3,0,2" Grid.Row="4" Height="25" IsEnabled="true" FontSize="13.333">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Height="20" Text="{Binding f_inputtor}"/>
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                                <a:Data.Prop>
                                                    <o:PropertySetter PropertyName="f_inputtor" NoDependValue="{m:Exp Str=inputtorlist.SelectedItem.f_inputtor}" NotNull="True"/>
                                                </a:Data.Prop>
                                            </ComboBox>
                                            <TextBlock Text="用气性质：" Margin="0,3,0,2" Grid.Row="4" TextWrapping="Wrap" TextAlignment="Right" Height="25"/>
                                            <ComboBox x:Name="CoboxGasPro" ItemsSource="{m:Exp Str=usegaslist}" DisplayMemberPath="f_gasproperties" SelectedValuePath="f_gasproperties" SelectedValue="{m:Bind Path=f_gasproperties}"  Grid.Column="1" Margin="0,4,0,1" Grid.Row="4" Height="25" Grid.ColumnSpan="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="Auto">
                                                <a:Data.Prop>
                                                    <o:PropertySetter PropertyName="f_gasproperties" NotNull="True" Value="{m:Exp Str=CoboxGasPro.SelectedItem.f_gasproperties}" />
                                                </a:Data.Prop>
                                            </ComboBox>
                                            <TextBlock Grid.Row="4" TextWrapping="Wrap" Text="阶梯气价类型：" TextAlignment="Right" Height="25" Margin="0,5,0,0" Grid.Column="4"/>
                                            <ComboBox x:Name="CoboxStair"  DisplayMemberPath="f_stairtype" SelectedValuePath="f_stairtype" SelectedValue="{m:Bind Path=f_stairtype}" ItemsSource="{m:Exp Str=stairl}" Margin="1,5,0,0" Grid.Row="4" Grid.Column="5"  Height="25" Grid.ColumnSpan="3"  VerticalAlignment="Stretch"   >
                                                <a:Data.Prop>
                                                    <o:PropertySetter PropertyName="f_stairtype" NotNull="True" />
                                                </a:Data.Prop>
                                            </ComboBox>
                                        </Grid>
                                    </sdk:TabItem>
                                </sdk:TabControl>
                            </c:BusyIndicatorEx>
                            <c:BusyIndicatorEx  Grid.Row="1"  >
                                <sdk:TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                    <sdk:TabItem Header="表具信息">
                                        <Grid Margin="0" HorizontalAlignment="Stretch"  >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="70*"/>
                                                <ColumnDefinition Width="30*"/>
                                            </Grid.ColumnDefinitions>
                                            <sdk:DataGrid x:Name="biaolist" Margin="0,0,0,0"  AutoGenerateColumns="False" ItemsSource="{m:Exp Str=biaoju}" Width="Auto" Background="{x:Null}" IsReadOnly="True">
                                                <sdk:DataGrid.Columns>
                                                    <sdk:DataGridTextColumn d:IsLocked="True" Header="  序号" Binding="{Binding Index}" Width="60" />
                                                    <sdk:DataGridTextColumn Header="      表 号  " Binding="{Binding f_userid}"/>
                                                    <sdk:DataGridTextColumn Header="   气表品牌  " Binding="{Binding f_userid}"/>
                                                    <sdk:DataGridTextColumn Header="   气表型号  " Binding="{Binding f_username}"/>
                                                    <sdk:DataGridTextColumn Header="   气表类型  " Binding="{Binding f_address}"/>
                                                    <sdk:DataGridTextColumn Header="   气表位置  " Binding="{Binding f_gasproperties}"/>
                                                    <sdk:DataGridTextColumn Header="   状态修改" />
                                                </sdk:DataGrid.Columns>
                                            </sdk:DataGrid>
                                            <toolkit:DockPanel Grid.Column="1" Margin="5,5,10,100" >
                                                <Button Content="添加" Width="60" Height="29" Margin="5,2,20,4"  Click="{m:Exp Str=biaoju.ItemsSource.Add_(biaojuNull)}"  />
                                            </toolkit:DockPanel>
                                        </Grid>
                                    </sdk:TabItem>
                                    <sdk:TabItem Header="设备信息">
                                        <Grid Margin="0" HorizontalAlignment="Stretch"  >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="70*"/>
                                                <ColumnDefinition Width="30*"/>
                                            </Grid.ColumnDefinitions>
                                            <!-- 设备信息   -->
                                            <sdk:DataGrid x:Name="areafiles2" Margin="0,0,82,0"  AutoGenerateColumns="False" Width="Auto" Background="{x:Null}" IsReadOnly="True">
                                                <sdk:DataGrid.Columns>
                                                    <sdk:DataGridTextColumn d:IsLocked="True" Header=" 序号 " Binding="{Binding Index}"/>
                                                    <sdk:DataGridTextColumn Header="      设备类型   " Binding="{Binding f_userid}"/>
                                                    <sdk:DataGridTextColumn Header="    品   牌   " Binding="{Binding f_username}"/>
                                                    <sdk:DataGridTextColumn Header="    型   号   " Binding="{Binding f_address}"/>
                                                    <sdk:DataGridTextColumn Header="    数   量   " Binding="{Binding f_gasproperties}"/>
                                                    <sdk:DataGridTextColumn Header="    状态修改  " />
                                                </sdk:DataGrid.Columns>
                                            </sdk:DataGrid>
                                            <toolkit:DockPanel Grid.Column="1" >
                                                <Button Content="添加" Width="60" Height="29" Margin="5,2,20,3"  ></Button>
                                            </toolkit:DockPanel>
                                        </Grid>
                                    </sdk:TabItem>
                                </sdk:TabControl>
                            </c:BusyIndicatorEx>
                            <c:BusyIndicatorEx  Grid.Row="2" >
                                <!--按钮-->
                                <toolkit:DockPanel toolkit:DockPanel.Dock="Bottom" HorizontalAlignment="Center" VerticalAlignment="Center" >
                                    <Button x:Name="save"   Content="保  存" Margin="5"  Width="60" />
                                    <Button x:Name="cancel" Content="清 空"  Margin="5"  Width="60"/>
                                </toolkit:DockPanel>
                            </c:BusyIndicatorEx>
                        </Grid>

                    </ScrollViewer>
                </toolkit:DockPanel>
            </c:BusyIndicatorEx>
        </Grid>
    </Grid>
</UserControl>
